- model_class = Ptcourse
.page-header
  %h1= t('staff.training.course.title')
= render 'shared/flashes'

.navbar.navbar-inverse{role: "navigation", style: "padding-right:40px;"}
  %ul.nav.navbar-nav
    %li= link_to content_tag(:li, fa_icon("asterisk", text: (t 'actions.new'))), new_staff_training_ptcourse_path
  %ul.nav.navbar-nav.navbar-right
    %li.toga= link_to content_tag(:li, fa_icon("search", text: (t 'actions.search'))), "#", class: "index_search_bar"
    %li= link_to content_tag(:li, fa_icon("print", text: (t 'actions.print'))), ptcourse_list_staff_training_ptcourses_path(params.merge(format: 'pdf'))
.row
  .col-md-12
    .alert.alert-warning
      %strong= t('staff.training.course.provider')+" : "
      =t 'staff.training.course.refer_address_book'
    %table.table-striped.table-hover.ogma
      %thead
        %tr
          %th{width: '25%'}= t('staff.training.course.name')
          %th{width: '13%'}= t('staff.training.course.provider')
          %th{width: '7%'}= t('staff.training.course.duration')
          %th{width: '10%'}= t('staff.training.course.cost')
          %th{width: '35%'}= t('staff.training.course.description')
          %th{width: '10%'}= t('staff.training.course.approval')
   
      %tbody
        = render "index_search"
        - @ptcourses.each do |course|
          %tr
            %td= link_to course.name, staff_training_ptcourse_path(course)
            %td= course.provider.try(:name)
            %td
              = number_with_precision(course.duration, precision: 0)
              = duration_type(course)
            %td.number= ringgols(course.cost)
            %td= truncate(course.description, :length => 80) {link_to '... [more]', staff_training_ptcourse_path(course)}
            %td.centre= course.approved? ? fa_icon('check') : fa_icon('times')
          
