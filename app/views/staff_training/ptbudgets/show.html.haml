- model_class = Ptbudget
.page-header
  %h1= fiscal_range(@ptbudget)
= render 'shared/flashes'


.row
  .col-md-offset-1
    %dl.dl-horizontal
      %dt= t 'staff.training.budget.budget', :default => model_class.human_attribute_name(:budget) + ":"
      %dd= @ptbudget.budget

      %dt= t 'staff.training.budget.start', :default => model_class.human_attribute_name(:start_at) + ":"
      %dd= fiscal_range(@ptbudget)
      
.row
  .col-md-4.col-md-offset-2
    %hr
    .form-actions
      = link_to content_tag(:i, "", :class => "fa fa-arrow-left ") + " " + t('.back', :default => t("helpers.links.back")), staff_training_budgets_path, :class => 'btn btn-default'
      = link_to content_tag(:i, "", :class => "fa fa-edit") + " " + t('.edit', :default => t("helpers.links.edit")), edit_staff_training_budget_path(@ptbudget), :class => 'btn btn-primary'
      = link_to content_tag(:i, "", :class => "fa fa-trash-o icon-white") + " " + t('.destroy', :default => t("helpers.links.destroy")), |
        staff_training_budgets_path(@ptbudget),                                                                                                    |
        :method => 'delete',                                                                                                           |
        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },                   |
        :class => 'btn btn-danger'
