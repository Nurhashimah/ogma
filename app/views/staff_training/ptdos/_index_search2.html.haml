= search_form_for @search, url: show_total_days_staff_training_ptdos_path,  class: "form-inline" do |f|
  %tr.search_row{style: "display: none;"}
    %td=f.text_field :ptschedule_course_name_cont, size: 2, class: 'form-control'
    %td
      =f.text_field :ptschedule_start_gteq, size:2, class:  'date_picker_reverse form-control', placeholder: (t 'from'), value: @search.ptschedule_start_gteq.try(:strftime, '%d-%m-%Y')
      =f.text_field :ptschedule_start_lteq, size:2, class:  'date_picker_reverse form-control', placeholder: (t 'to'), value: @search.ptschedule_start_lteq.try(:strftime, '%d-%m-%Y')
    %td=f.text_field :ptschedule_location_cont, size: 2,  class:  'form-control'
    %td
      .input-group
        %span.input-group-btn
          %button.btn.btn-sm.btn-default.right{:type => "submit"}
            %i.fa.fa-search.fa-fw