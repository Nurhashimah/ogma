- model_class = Ptbudget
.page-header
  %h1= t('ptbudget.list')

.navbar.navbar-inverse{role: "navigation", style: "padding-right:40px;"}
  %ul.nav.navbar-nav
    %li= link_to content_tag(:li, fa_icon("asterisk", text: (t 'actions.new'))), '#', class: 'bogus'
  %ul.nav.navbar-nav.navbar-right
    %li.toga= link_to content_tag(:li, fa_icon("search", text: (t 'actions.search'))), "#", class: "toga"
    %li= link_to content_tag(:li, fa_icon("print", text: (t 'actions.print'))), "#", class: 'bogus'

  %table
    %tr
      %td{:colspan => "12"}
        = link_to image_tag("money_add.png", :border => 0, :title => 'Enter New Budget') + "New Budget", new_ptbudget_path
    %tr
      %th Fiscal Year Start
      %th Budget
      %th Used
      %th Balance
      %th.ac{:colspan => "3"}= t 'control'
    - @ptbudgets.each do |ptbudget|
      %tr
        %td
          = h l(ptbudget.fiscalstart)
          to #{h l(ptbudget.fiscal_end)}
        / 19/10/2011-Shaliza changed date format
        %td= h ringgols(ptbudget.budget)
        / 19/10/2011-Shaliza remove word RM
        %td= h ringgols(ptbudget.used_budget)
        %td= h ringgols(ptbudget.budget_balance)
        %td{:width => "10px"}= link_to image_tag("document.png", :border => 0, :title => 'Show'), :action => 'show', :id => ptbudget
        %td{:width => "10px"}= link_to image_tag("edit.png", :border => 0, :title => 'Edit'), :action => 'edit', :id => ptbudget
        %td{:width => "10px"}= link_to image_tag("delete.png", :border => 0, :title => 'Delete'), ptbudget, :confirm => 'Are you sure?', :method => :delete
  %br/
= link_to image_tag("money_add.png", :border => 0, :title => 'Enter New Budget') + "Create New /Budget", new_ptbudget_path
