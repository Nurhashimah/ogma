    %table.table-striped.table-hover.ogma
      %thead
        %tr
          %th.centre{width: '8%'} No
          %th{width: '50%'}=(t 'asset.description')+" "+(t 'form')
          %th.centre{width: '22%'}=(t 'download')+" "+(t 'pdf_format')
          %th.centre{width: '20%'}=(t 'asset.link')+" / "+(t 'module')
  
      - no=0
      %tbody
        %tr
          %td.centre.centre=no+=1
          %td Borang Laporan Penerimaan Aset Alih Kerajaan
