          %td Senarai Daftar Harta Modal
          %td.centre= link_to (fa_icon("file-pdf-o", text: "KEW.PA-4")), asset_path("kewpas/kewpa4.pdf")
          %td.centre
            - permitted_to? :manage, :asset_assets do
              .btn-group.dropdown
                %button.btn.dropdown-toggle{"data-toggle" => "dropdown"}
                  .small 
                    Senarai Daftar HM
                    .span.caret
                    
                %ul.dropdown-menu.pull-right.action_menu
                  %li= link_to (t 'all_records'), :controller => 'asset/assets', :action => "kewpa4", :search => '0', :format => 'pdf'
                  - yeartab=[]
                  - for x in Asset.hm.map{|d| d.assetcode.split("/")[4]}
                    - if x.size==2
                      - yeartab << "20"+x
                    - else
                      - yeartab << x
                  - yeartab.uniq.sort.each do |ytab|
                    %li= link_to "KEW.PA 4 (#{ytab})", kewpa4_asset_assets_path(format: "pdf", search_year: ytab)

