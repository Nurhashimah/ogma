          %td.centre -

        %tr
          %td.centre=no+=1
          %td Daftar Harta Modal
          %td.centre= link_to (fa_icon("file-pdf-o", text: "KEW.PA-2a")), asset_path("kewpas/kewpa2.pdf") 	  
          %td.centre{rowspan: 2, style: 'vertical-align: middle;'}
            - permitted_to? :manage, :asset_assets do
              = link_to (t 'asset.title'), asset_assets_path

        %tr
          %td.centre=no+=1
          %td Daftar Inventori
