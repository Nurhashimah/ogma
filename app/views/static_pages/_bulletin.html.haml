#quote-carousel.carousel.slide{"data-ride" => "carousel"}
 - slide_index = Array(0...@bulletins.count)
 %ol.carousel-indicators
  - slide_index.each do |index|
   - if index == 0; is_active = "active"; end
   %li{class: "#{is_active}", "data-slide-to" => "#{index}", "data-target" => "#quote-carousel"}
 .carousel-inner
  - counter = 0
  - @bulletins.each do |bulletin|
   - if counter == 0; is_active = "active"; end
   .item{class: "#{is_active}"}
    .col-md-3
     %h1= bulletin.headline.upcase
    .col-md-9
     .content= bulletin.content
     .data
      - if bulletin.data.exists? then
       = link_to (t 'bulletin.download'), bulletin.data.url
      - else
   - counter += 1
