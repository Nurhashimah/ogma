= search_form_for @search, url: cofiles_path,  class: "form-inline" do |f|
  %tr.search_row{style: 'display: blank;'}
    %td= f.text_field :cofileno_cont, size: 2,  :class => "form-control"
    %td= f.text_field :name_cont, size: 2,  :class => "form-control"
    %td= f.text_field :location_cont, size: 2,  :class => "form-control"
    %td= f.text_field :owner_name_cont, size: 2,  :class => "form-control"
    %td= f.text_field :borrower_name_cont, size: 2,  :class => "form-control"
    %td.input-group
      = f.text_field :onloandt_eq, size: 2,  :class => "form-control date_picker_reverse", value: @search.onloandt_eq.try(:strftime, '%d-%m-%Y')    	  
      %span.input-group-btn
        %button.btn.btn-sm.btn-default.right{:type => "submit"}
          %i.fa.fa-search.fa-fw