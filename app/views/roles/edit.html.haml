- model_class = Role
.page-header
  %h1= t 'role.edit'
  
.row
  = form_for @role,  html: { multipart: true, class: 'form-horizontal' }  do |f| 
    = render 'shared/error_messages', object: f.object
 
    .col-md-offset-1
      / Nav tabs
      %ul.nav.nav-tabs
        %li.active= link_to (t "role.details"), "#details",  "data-toggle" => "tab" 
        
      /display
      .tab-content{style:"padding-top:1em"}
        #details.tab-pane.fade.in.active 
          %br
          = render 'tab_details_edit', :f=>f

      .col-md-8.col-md-offset-1
        .form-group
          .col-sm-offset-1.col-sm-2
            = link_to content_tag(:i, "", :class => "fa fa-arrow-left ") + " " + t('.back', :default => t("helpers.links.back")), role_path(@role), :class => 'btn btn-default'
          .col-sm-2
            = f.submit t('update'), class: "btn btn-primary" 
 
