- model_class = Fingerprint
.page-header
  %h1= t 'fingerprint.new'

= render 'shared/flashes'

.row.fluid
  = form_for [:staff, @fingerprint], html: { multipart: true, class: 'form-horizontal' }  do |f| 
    = render 'shared/error_messages', object: f.object
    = render :partial => 'form', :locals => {:f => f}

    .col-md-offset-1
      .form-group
        .col-sm-offset-2
          .col-sm-2
            = link_to content_tag(:i, "", :class => "fa fa-arrow-left ") + " " + t('staff_attendance.list1'), staff_staff_attendances_path, :class => 'btn btn-default'
          .col-sm-2
            = link_to content_tag(:i, "", :class => "fa fa-arrow-left ") + " " + t('staff_attendance.list2'), '/attendance/manager/', :class => 'btn btn-default'
          .col-sm-2
            = f.submit t('create'), class: "btn btn-primary"
