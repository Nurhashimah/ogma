- model_class = TravelRequest
.page-header
  %h1= t('staff.travel_request.my_travel_logs')
  
.navbar.navbar-inverse{role: "navigation", style: "padding-right:40px;"}
  %ul.nav.navbar-nav
    /%li= link_to content_tag(:li, fa_icon("asterisk", text: (t 'actions.new'))), new_staff_travel_request_path
  %ul.nav.navbar-nav.navbar-right
    %li.toga= link_to content_tag(:li, fa_icon("search", text: (t 'actions.search'))), "#", class: "toga"
    %li= link_to content_tag(:li, fa_icon("print", text: (t 'actions.print'))), travellog_list_staff_travel_requests_path(params.merge(format: 'pdf'))

.row.filter{style: "display:none;"}
  .col-md-2
    
.row
  %table.table-striped.table-hover.ogma
    %thead
      %tr
        %th{width: '15%'}= sort_link(@search, :document_id, (t 'staff.travel_request.document_id'))
        %th{width: '20%'}= sort_link(@search, :staff_id, (t 'staff.travel_request.staff_id'))
        %th{width: '15%'}=  sort_link(@search, :destination,(t 'staff.travel_request.destination'))
        %th{width: '10%'}= sort_link(@search, :depart_at, (t 'staff.travel_request.depart_at'))
        %th{width: '10%'}= sort_link(@search, :return_at, (t 'staff.travel_request.return_at'))
        %th{width: '15%'}= sort_link(@search, :purpose, (t 'staff.travel_request.purpose'))
        %th{width: '15%'}=sort_link(@search, :hod_accept, (t 'staff.travel_request.hod_accept'))
        
    %tbody
    = render "index_search2"
        
    - @my_approved_requests.each do |approved_request|
      %tr
        %td=h approved_request.try(:document).try(:refno)
        %td
          - if approved_request.college.code=='amsas'
            =h link_to approved_request.applicant.try(:staff_with_rank), staff_travel_request_path(approved_request)
          - else
            =h link_to approved_request.applicant.try(:staff_name_with_position), staff_travel_request_path(approved_request)
        %td=h approved_request.destination
        %td=h approved_request.college.code=='amsas' ? approved_request.depart_at.try(:strftime, '%d-%m-%Y %H:%M') : approved_request.depart_at.try(:strftime, '%d %b %Y %l:%M %P')
        %td=h approved_request.college.code=='amsas' ? approved_request.return_at.try(:strftime, '%d-%m-%Y %H:%M') : approved_request.return_at.try(:strftime, '%d %b %Y %l:%M %P')
        %td=h approved_request.document.try(:title)
        %td=h approved_request.hod_accept? ? fa_icon('check') : "-"
                
  .right{style:"padding:0 30px; margin:0;"}= paginate @my_approved_requests, :theme => 'twitter-bootstrap-3'
 
:javascript
$(document).ready(function(){
  $('.toga').click(function() {
    $('.search_row').toggle(); 
  });
})year
