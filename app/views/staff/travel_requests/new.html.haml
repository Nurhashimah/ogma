- model_class = TravelRequest
.page-header
  %h1=t('staff.travel_request.new') 
  
= render 'shared/flashes'

.row.fluid
  = form_for [:staff, @travel_request], html: { class: 'form-horizontal' }  do |f| 
    = render 'shared/error_messages', object: f.object
    = hidden_field_tag :redirect_location, staff_travel_requests_path 
    = f.hidden_field :college_id, value: current_user.college_id
    = render :partial => 'form', :locals => {:f => f}        

    .col-md-offset-1
      .form-group
        .col-sm-offset-2.col-sm-1
          = link_to content_tag(:i, "", :class => "fa fa-arrow-left ") + " " + t('.back', :default => t("helpers.links.back")), staff_travel_requests_path, :class => 'btn btn-default'
        .col-sm-offset-1.col-sm-2
          = f.submit t('create'), class: "btn btn-primary"
