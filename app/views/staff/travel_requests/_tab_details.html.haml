- model_class=TravelRequest
.col-md-8.col-md-offset-1
  %dl.dl-horizontal
    %dt=t 'staff.travel_request.destination'
    %dd=h @travel_request.destination
    
    %dt= t 'staff.travel_request.depart_at' 
    %dd=h @travel_request.college.code=='amsas' ? @travel_request.depart_at.try(:strftime, '%d-%m-%Y %H:%M') : @travel_request.depart_at.try(:strftime, '%d %B %Y %l:%M %P') 
  
    %dt=t 'staff.travel_request.return_at'
    %dd=h h @travel_request.college.code=='amsas' ? @travel_request.return_at.try(:strftime, '%d-%m-%Y %H:%M') : @travel_request.return_at.try(:strftime, '%d %B %Y %l:%M %P') 

    %hr
    
    %dt=t 'staff.travel_request.transport_choice'
    %dd{style: 'padding-left: 70px;'}
      =t 'staff.travel_request.own_car'
      - if !@travel_request.applicant.vehicles.blank? && @travel_request.own_car?
        =fa_icon('check')+'('+@travel_request.applicant.vehicles[0].reg_no+' '+ t('staff.transportclass_id')+' : '+@travel_request.transport_class+') '
      - else
        =fa_icon('times')
      =t 'staff.travel_request.dept_car'
      =h @travel_request.dept_car? ? fa_icon('check') : fa_icon('times')
      =t 'staff.travel_request.others_car'
      =h @travel_request.others_car? ? fa_icon('check')+'('+@travel_request.others_car_notes+')' : fa_icon('times')
    
    - if !@travel_request.applicant.vehicles.blank? && @travel_request.own_car?
      %dt=t 'staff.travel_request.own_car_notes'
      %dd=h @travel_request.own_car_notes
    
    %dt=t 'staff.travel_request.public_transport'
    %dd
      =t 'staff.travel_request.taxi'
      =h @travel_request.taxi? ? fa_icon('check') : fa_icon('times')
      =t 'staff.travel_request.bus'
      =h @travel_request.bus? ? fa_icon('check') : fa_icon('times') 
      =t 'staff.travel_request.train'
      =h @travel_request.train? ? fa_icon('check') : fa_icon('times') 
      =t 'staff.travel_request.plane'
      =h @travel_request.plane? ? fa_icon('check') : fa_icon('times') 
      =t 'staff.travel_request.other'
      =h @travel_request.other? ? fa_icon('check') : fa_icon('times') + ' ' + @travel_request.other_desc 
    
    - unless @travel_request.hod_accept == true
      %dt=t 'staff.travel_request.mileage_desc'
      %dd
        =t 'staff.travel_request.mileage'
        /=h @travel_request.mileage? ? fa_icon('check') : fa_icon('times')
        - if @travel_request.mileage_replace==nil 
          =h @travel_request.mileage? ? fa_icon('check') : fa_icon('times') 
        - else
          =h @travel_request.mileage_replace? ? fa_icon('times') : fa_icon('check')

        =t 'staff.travel_request.mileage_replace'
        %font{:size=>'-2'}
          = t 'staff.travel_request.train_plane_replacement'
        /=h @travel_request.mileage_replace? ? fa_icon('check') : fa_icon('times') 
        - if @travel_request.mileage_replace==nil
          = image_tag("tick.png") if @travel_request.mileage==false
        - else 
          =h @travel_request.mileage_replace? ? fa_icon('check') : fa_icon('times') 