- model_class = Postinfo
.page-header
  %h1= @postinfo.college.code=='amsas' ? (t 'staff.postinfos.edit2') : (t 'staff.postinfos.edit')
  
.row
  = form_for [:staff, @postinfo],  html: { multipart: true, class: 'form-horizontal' }  do |f| 
    = render 'shared/error_messages', object: f.object
    .col-md-9.col-md-offset-3
      %br
      = render 'form', :f => f
               
      .col-md-8.col-md-offset-1
        .form-group
          .col-sm-offset-1.col-sm-2
            = link_to content_tag(:i, "", :class => "fa fa-arrow-left ") + " " + t('.back', :default => t("helpers.links.back")), staff_postinfos_path, :class => 'btn btn-default'
          .col-sm-4
            = f.submit t('update'), class: "btn btn-primary" 
