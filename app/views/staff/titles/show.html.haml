- model_class = Title
.page-header
  %h1= t 'staff.titles.title'
= render 'shared/flashes'

.row
  .col-md-offset-1
    / Nav tabs
    %ul.nav.nav-tabs
      %li.active= link_to (t "staff.titles.details"), "#details",     "data-toggle" => "tab"

.tab-content.col-md-offset-1
  .col-md-8.col-md-offset-1
    %dl.dl-horizontal
      %dt= t 'staff.titles.titlecode'
      %dd= @title.titlecode
      
      %dt= t 'staff.titles.name'
      %dd= @title.name
     
      %dt Berhormat
      %dd=h @title.berhormat==true ? fa_icon("check") : fa_icon("times")

.row
  .col-md-4.col-md-offset-3
    %hr
    .form-actions
      = link_to content_tag(:i, "", :class => "fa fa-arrow-left ") + " " + t('.back', :default => t("helpers.links.back")), staff_titles_path, :class => 'btn btn-default'
      = link_to content_tag(:i, "", :class => "fa fa-edit") + " " + t('.edit', :default => t("helpers.links.edit")), edit_staff_title_path(@title), :class => 'btn btn-primary'
      = link_to content_tag(:i, "", :class => "fa fa-trash-o icon-white") + " " + t('.destroy', :default => t("helpers.links.destroy")), |
        staff_title_path(@title),                                                                                                    |
        :method => 'delete',                                                                                                           |
        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },                   |
        :class => 'btn btn-danger'
    