  %table.table.table-bordered.table-condensed
    %tr.warning
      %th{colspan: 2}=t('average_instructor.performance_component')
      %th.centre=((t 'average_instructor.max_score')+'<br> (x)').html_safe
      %th.centre=((t 'average_instructor.obtained_score')+'<br> (y)').html_safe
      %th.centre=((t 'average_instructor.weightage')+'<br> (w)').html_safe
      %th=((t 'average_instructor.percent')+'<br><u>y</u> X w<br>x').html_safe
    %tr
      %th A
      %td=t('average_instructor.preparation').upcase
      %td.centre 45
      %td.col-md-1=@average_instructor.marks_a
      %td.centre 25
      %td.col-md-2=number_with_precision(@average_instructor.percent_a, precision: 2)
    %tr
      %th B
      %td=t('average_instructor.delivery').upcase
      %td.centre 60
      %td.col-md-1=@average_instructor.marks_b
      %td.centre 30
      %td.col-md-2=number_with_precision(@average_instructor.percent_b, precision: 2)
    %tr
      %th C
      %td=t('average_instructor.usage').upcase
      %td.centre 20
      %td.col-md-1=@average_instructor.marks_c
      %td.centre 5
      %td.col-md-2=number_with_precision(@average_instructor.percent_c, precision: 2)
    %tr
      %th D
      %td=t('average_instructor.verification').upcase
      %td.centre 25
      %td.col-md-1=@average_instructor.marks_d
      %td.centre 20
      %td.col-md-2=number_with_precision(@average_instructor.percent_d, precision: 2)
    %tr
      %th E
      %td=t('average_instructor.general_teaching_technique').upcase
