      %td.col-md-1=@average_instructor.marks_e
      %td.centre 20
      %td.col-md-2=number_with_precision(@average_instructor.percent_e, precision: 2)
      
   
  %table.table.table-bordered.table-condensed
    %tr.warning
      %th.centre=t('average_instructor.score_range')
      %th.centre=t('average_instructor.grade')
      %th.centre=t('average_instructor.performance')
    %tr
      - if @average_instructor.grade=="A"
        %th.active.centre 85 - 100
        %th.active.centre A
        %th.active.centre=t('average_instructor.excellent')
      - else
        %td.centre 85 - 100
        %td.centre A
        %td.centre=t('average_instructor.excellent')
    %tr
      - if @average_instructor.grade=="B"
        %th.active.centre 70 - 84
        %th.active.centre B
        %th.active.centre=t('average_instructor.good')
      - else
        %td.centre 70 - 84
        %td.centre B
        %td.centre=t('average_instructor.good')
    %tr
      - if @average_instructor.grade=="C"
        %th.active.centre 50 - 69
        %th.active.centre C
        %th.active.centre=t('average_instructor.average')
      - else
        %td.centre 50 - 69
        %td.centre C
        %td.centre=t('average_instructor.average')
    %tr
      - if @average_instructor.grade=="D"
        %th.active.centre 40 - 49
        %th.active.centre D
        %th.active.centre=t('average_instructor.weak')
      - else
        %td.centre 40 - 49
        %td.centre D
        %td.centre=t('average_instructor.weak')
    %tr
      - if @average_instructor.grade=="E"
        %th.active.centre < 40
