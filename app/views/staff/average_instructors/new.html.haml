- model_class = AverageInstructor
.page-header
  %h1= t 'average_instructor.new'
= render 'shared/flashes'

.row.fluid
  = form_for [:staff, @average_instructor], html: { multipart: true, class: 'edit_form form-horizontal' }  do |f| 
    = render 'shared/error_messages', object: f.object
    = f.hidden_field :college_id, value: current_user.college_id
    = render :partial => 'form', :locals => {:f => f}

    .col-md-offset-1
      .form-group
        .col-sm-offset-2
          .col-sm-2
            = link_to content_tag(:i, "", :class => "fa fa-arrow-left ") + " " + t('back'), staff_average_instructors_path, :class => 'btn btn-default'
          .col-sm-2
            = f.submit t('create'), class: "btn btn-primary"
