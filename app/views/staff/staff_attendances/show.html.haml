- model_class = StaffAttendance
.page-header
  %h1= t 'staff_attendance.title'
= render 'shared/flashes'

.row
  .col-md-offset-1
    / Nav tabs
    %ul.nav.nav-tabs
      %li.active= link_to (t 'staff_attendance.details'),"#staff_attendance_details", "data-toggle" => "tab"
      %li=link_to ((t 'staff_attendance.approval')),"#staff_attendance_approval", "data-toggle" => "tab"

    / display 
    .tab-content{style:"padding-top:1em"}
      #staff_attendance_details.tab-pane.active  
        .col-md-8.col-md-offset-1
          %dl.dl-horizontal
            %dt= t'staff_attendance.thumb_id'
            %dd=h @staff_attendance.try(:attended).try(:thumb_id_with_name_unit)

            %dt= t'staff_attendance.logged_at'
            %dd=h @staff_attendance.try(:logged_at).try(:strftime,  '%d %b %Y %H:%M:%S %P')
            
            %dt= t'staff_attendance.log_type'
            %dd=h (DropDown::LOGTYPE.find_all{|disp, value| value == @staff_attendance.log_type }).map {|disp, value| disp}[0]
      #staff_attendance_approval.tab-pane
        .col-md-8.col-md-offset-1
          %dl.dl-horizontal
            %dt= t'staff_attendance.reason'
            %dd=h @staff_attendance.reason

            %dt= t'staff_attendance.trigger'
            %dd=h @staff_attendance.trigger
            
            %dt= t'staff_attendance.approved_by'
            %dd=h @staff_attendance.try(:approver).try(:name)
            
            %dt= t'staff_attendance.is_approved'
            %dd=h @staff_attendance.is_approved? ? image_tag("tick.png") : image_tag("cross.png")
            
            %dt= t'staff_attendance.approved_on'
            %dd=h @staff_attendance.try(:approved_on).try(:strftime, '%d %b %Y')

.row
  .col-md-4.col-md-offset-3
    %hr
    .form-actions
      = link_to content_tag(:i, "", :class => "fa fa-arrow-left ") + " " + t('.back', :default => t("helpers.links.back")), staff_staff_attendances_path, :class => 'btn btn-default'
      = link_to content_tag(:i, "", :class => "fa fa-edit") + " " + t('.edit', :default => t("helpers.links.edit")), edit_staff_staff_attendance_path(@staff_attendance),  :class => 'btn btn-primary' 
      = link_to content_tag(:i, "", :class => "fa fa-trash-o icon-white") + " " + t('.destroy', :default => t("helpers.links.destroy")), |
        staff_staff_attendance_path(@staff_attendance),                                                                                                    |
        :method => 'delete',                                                                                                           |
        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },                   |
        :class => 'btn btn-danger'
