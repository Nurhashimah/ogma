- model_class = Mentor
.page-header
  %h1= t 'staff.mentors.title'
= render 'shared/flashes'

.row
  .col-md-8.col-md-offset-2
    / Nav tabs
    %ul.nav.nav-tabs
      %li.active= link_to (t 'staff.mentors.details'),"#mentor_details", "data-toggle" => "tab"

    / display 
    .tab-content{style:"padding-top:1em"}
      #mentor_details.tab-pane.active  
        .col-md-8.col-md-offset-1
          %dl.dl-horizontal
            %dt= t 'staff.mentors.mentor_date'
            %dd=h @mentor.mentor_date.strftime('%d-%m-%Y')
            
            %dt= t 'staff.mentors.staff_id'
            %dd=h @mentor.staff.staff_with_rank

            %dt= t 'staff.mentors.mentee'
            %dd{style: 'padding-left: 80px;'}
              %ol
                - for mentee in @mentor.mentees
                  %li= mentee.student.student_with_rank
            
            %dt=t 'staff.mentors.remark'
            %dd=h @mentor.remark

.row
  .col-md-6.col-md-offset-4
    %hr
    .form-actions
      = link_to content_tag(:i, "", :class => "fa fa-arrow-left ") + " " + t('back'), staff_mentors_path, :class => 'btn btn-default'
      - permitted_to? :update, :staff_mentors do
        = link_to content_tag(:i, "", :class => "fa fa-edit") + " " + (t 'actions.edit'), edit_staff_mentor_path(@mentor),  :class => 'btn btn-primary' 
      - permitted_to? :manage, :staff_mentors do
        = link_to content_tag(:i, "", :class => "fa fa-trash-o icon-white") + " " + t('.destroy', :default => t("helpers.links.destroy")), |
            staff_mentor_path(@mentor),                                                                                                    |
            :method => 'delete',                                                                                                           |
            :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },                   |
            :class => 'btn btn-danger'
