- model_class = Mentor
.page-header
  %h1= t 'staff.mentors.edit'
  
.row
  = form_for [:staff, @mentor],  html: { multipart: true, class: 'form-horizontal' }  do |f| 
    = render 'shared/error_messages', object: f.object
    .col-md-9.col-md-offset-1
      %br
      = render 'form', :f => f
               
      .col-md-8.col-md-offset-1
        .form-group
          .col-sm-offset-1.col-sm-2
            = link_to content_tag(:i, "", :class => "fa fa-arrow-left ") + " " + t('.back', :default => t("helpers.links.back")), staff_mentors_path, :class => 'btn btn-default'
          .col-sm-4
            = f.submit t('update'), class: "btn btn-primary"