- model_class = StaffShift
.page-header
  %h1= t 'staff.staff_shifts.edit'
  
.row
  = form_for [:staff, @staff_shift],  html: { multipart: true, class: 'form-horizontal' }  do |f| 
    = render 'shared/error_messages', object: f.object
 
    .col-md-offset-1
      / Nav tabs
      %ul.nav.nav-tabs
        %li.active= link_to (t "staff.staff_shifts.details"), "#details",  "data-toggle" => "tab" 
        
      /display
      .tab-content{style:"padding-top:1em"}
        #details.tab-pane.fade.in.active 
          .col-md-6.col-md-offset-2
            = render 'form', :f => f
                
            %br

      .col-md-6.col-md-offset-1
        .form-group
          .col-sm-offset-2.col-sm-2
            = link_to content_tag(:i, "", :class => "fa fa-arrow-left ") + " " + t('.back', :default => t("helpers.links.back")), staff_staff_shifts_path, :class => 'btn btn-default'
          .col-sm-3
            = f.submit t('update'), class: "btn btn-primary" 
 
