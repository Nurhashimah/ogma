- model_class = StaffShift
.page-header
  %h1= t 'staff.staff_shifts.title'
= render 'shared/flashes'

.row
  .col-md-offset-1
    / Nav tabs
    %ul.nav.nav-tabs
      %li.active= link_to (t "staff.staff_shifts.details"), "#details", "data-toggle" => "tab"

.tab-content.col-md-offset-1
  .col-md-8.col-md-offset-1
    %dl.dl-horizontal
      %dt= t 'staff.staff_shifts.name'
      %dd= @staff_shift.name
      
      %dt= (t 'staff.staff_shifts.start_at')+" - "+(t 'staff.staff_shifts.end_at')
      %dd=l(@staff_shift.start_at)+" - "+l(@staff_shift.end_at)

.row
  .col-md-4.col-md-offset-3
    %hr
    .form-actions
      = link_to content_tag(:i, "", :class => "fa fa-arrow-left ") + " " + t('.back', :default => t("helpers.links.back")), staff_staff_shifts_path, :class => 'btn btn-default'
      = link_to content_tag(:i, "", :class => "fa fa-edit") + " " + t('.edit', :default => t("helpers.links.edit")), edit_staff_staff_shift_path(@staff_shift), :class => 'btn btn-primary'
      = link_to content_tag(:i, "", :class => "fa fa-trash-o icon-white") + " " + t('.destroy', :default => t("helpers.links.destroy")), |
        staff_staff_shift_path(@staff_shift),                                                                                                    |
        :method => 'delete',                                                                                                           |
        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },                   |
        :class => 'btn btn-danger'
    