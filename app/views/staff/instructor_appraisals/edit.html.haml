- model_class = InstructorAppraisal
.page-header
  %h1= t 'instructor_appraisal.edit'
= render 'shared/flashes'
- current_roles=current_user.roles.pluck(:authname)

.row
  = form_for [:staff, @instructor_appraisal],  :html => { :class => 'form-horizontal' } do |f| 
    = render 'shared/error_messages', object: f.object

    - if @instructor_appraisal.staff_id==current_user.userable_id || is_developer? || current_roles.include?('administration') || current_roles.include?('instructor_appraisals_module_admin') || current_roles.include?('instructor_appraisals_module_viewer') || current_roles.include?('instructor_appraisals_module_user') || current_roles.include?('e_filing')
    
      = render :partial => 'form', :locals => {:f => f}

      .row
        .col-md-7.col-md-offset-3
          .form-group
            .col-md-1
              = link_to content_tag(:i, "", :class => "fa fa-arrow-left ") + " " + t('.back', :default => t("helpers.links.back")), staff_instructor_appraisal_path(@instructor_appraisal), :class => 'btn btn-default'
            .col-md-2.col-md-offset-1
              /.div{style: "margin-left:-40px;"}
              = f.submit t('update'), class: "btn btn-primary"