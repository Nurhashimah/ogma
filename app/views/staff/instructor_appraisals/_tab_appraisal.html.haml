%table.table.table-bordered
  %tr
    %th{:width=>"20px;"} Siri
    %th{:width=>"300px;"}=t 'instructor_appraisal.question'
    %th{:colspan=>"3"}= t 'instructor_appraisal.score'

  - if @instructor_appraisal.data.blank?
    - 0.upto(47) do |cnt|
      %tr
        %td{:width=>"20px;"}=cnt+=1
        %td{:width=>"300px;"}=t('instructor_appraisal'+".q#{cnt}")
        - 2.downto(0) do |count|
          %td.centre{:width=>"20px;"}=count
  - else
    - cnt=0  
    - @instructor_appraisal.data.each do |k, v|
      %tr
        %td=cnt+=1
        %td=t('instructor_appraisal'+".q#{cnt}")
        - 2.downto(0) do |count|
          %td.centre{:width=>"20px;"}
            - if v.to_i == count
              %b=v
            - else
              %font{:style=>"color: #D5D3D3;"}=count      


