.col-md-offset-2     
  .form-group
    .col-sm-2.control-label
      = f.label t 'instructor_appraisal.staff_id', for: :staff_id
    .col-md-8
      - current_roles=current_user.roles.pluck(:authname)
      - if current_roles.include?('instructor_appraisals_module_admin') || current_roles.include?('administration') || current_roles.include?('developer')
        = f.collection_select :staff_id, Staff.joins(:positions).where('positions.name=?', 'Jurulatih').order(rank_id: :asc, name: :asc), :id, :staff_with_rank,{ include_blank: (t 'select')},{class: 'selectpicker mandatory', "data-width"=> "300px"}
      - else
        = f.collection_select :staff_id, Staff.joins(:positions).where('positions.name=? and positions.staff_id=?', 'Jurulatih', current_user.userable_id).uniq, :id, :staff_with_rank,{ include_blank: (t 'select'), selected: current_user.userable_id},{class: 'selectpicker mandatory', "data-width"=> "300px"}

  .form-group
    .col-sm-2.control-label
      = f.label t 'instructor_appraisal.appraisal_date', for: :appraisal_date
    .col-md-3
      = f.text_field :appraisal_date, class: 'date_picker_reverse form-control mandatory', value: @instructor_appraisal.appraisal_date.try(:strftime, '%d-%m-%Y')