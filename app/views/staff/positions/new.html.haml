- model_class = Position
.page-header
  %h1
    = t 'new'
    /= @position.name

= render 'shared/flashes'

.row
  .col-md-offset-1
    / Nav tabs
    %ul.nav.nav-tabs
      %li.active= link_to (t 'position.details'), "#details", "data-toggle" => "tab"

.row.fluid
  = form_for [:staff, @position], html: { class: 'form-horizontal' }  do |f|
    = render 'shared/error_messages', object: f.object
    = f.hidden_field :parent_id
    = f.hidden_field :college_id, current_user.college_id

    / Tab panes
    .tab-content{style:"padding-top:1em"}

      //Info Tab
      #details.tab-pane.active
        .col-md-offset-2
          %br
          = render 'position_details_edit', :f => f
          
    %br
    .row
      .form-group
        .col-sm-offset-4.col-sm-1
          = link_to content_tag(:i, "", :class => "fa fa-arrow-left ") + " " + t('.back', :default => t("helpers.links.back")), staff_positions_path, :class => 'btn btn-default'
        .col-sm-2
          = f.submit t('create'), class: "btn btn-primary"