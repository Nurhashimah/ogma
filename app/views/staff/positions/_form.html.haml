
.row
  .col-md-offset-1
    / Nav tabs
    %ul.nav.nav-tabs
      %li.active= link_to (t 'position.details'), "#details", "data-toggle" => "tab"

.row.fluid
  = form_for [:staff, @position], url: staff_position_path(@position), :html => { :class => 'form-horizontal' }  do |f|
    = render 'shared/error_messages', object: f.object

    / Tab panes
    .tab-content{style:"padding-top:1em"}

      //Info Tab
      #details.tab-pane.active
        .col-md-offset-2
          %br
          = render 'position_details_edit', :f => f

    .col-md-8.col-md-offset-3
      .col-sm-offset-2.col-sm-2
        = f.submit t('update'), class: "btn btn-primary"

