- model_class = Holiday
.page-header
  %h1= t 'holiday.new'
= render 'shared/flashes'

.row.fluid
  = form_for [:staff, @holiday], html: { multipart: true, class: 'form-horizontal' }  do |f| 
    = render 'shared/error_messages', object: f.object
    = render :partial => 'form', :locals => {:f => f}
    = f.hidden_field :college_id, value: current_user.college_id

    .col-md-offset-1
      .form-group
        .col-sm-offset-2
          .col-sm-2
            = link_to content_tag(:i, "", :class => "fa fa-arrow-left ") + " " + t('holiday.list'), staff_holidays_path, :class => 'btn btn-default'
          .col-sm-2
            = f.submit t('create'), class: "btn btn-primary"
