-model_class = Holiday
.page-header
  %h1= t('holiday.title')
= render 'shared/flashes'
  
.navbar.navbar-inverse{role: "navigation", style: "padding-right:40px;"}
  %ul.nav.navbar-nav
    - permitted_to? :create, :staff_holidays do
      %li= link_to content_tag(:li, fa_icon("asterisk", text: (t 'actions.new'))), new_staff_holiday_path
  %ul.nav.navbar-nav.navbar-right
    %li.toga= link_to content_tag(:li, fa_icon("search", text: (t 'actions.search'))), "#", class: "index_search_bar"
    - permitted_to? :holiday_list, :staff_holidays do
      %li= link_to content_tag(:li, fa_icon("print", text: (t 'actions.print'))), holiday_list_staff_holidays_path(params.merge(format: 'pdf'))

.row
  %table.table-striped.table-hover.ogma
    %thead
      %tr
        %th{width: '50%'}=sort_link(@search, :hname, (t 'holiday.hname'))
        %th{width: '50%'}=sort_link(@search, :hdate, (t 'holiday.hdate'))
        
    %tbody
      = render "index_search"
      - @holidays.each do |holiday|
        %tr
          %td=h link_to holiday.hname.capitalize, staff_holiday_path(holiday)
          %td= "#{fullmonthname(holiday.hdate)} (#{fulldayname(holiday.hdate.wday)})"
        
  .right{style:"padding:0 30px; margin:0;"}= paginate @holidays, :theme => 'twitter-bootstrap-3'            
            
            
