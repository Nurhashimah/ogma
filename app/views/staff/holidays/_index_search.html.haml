= search_form_for [:holiday, @search], url: staff_holidays_path,  class: "form-inline" do |f|
  %tr.search_row{style: "display: none;"}
    %td= f.text_field :hname_cont, size: 8,  :class => "form-control" 
    %td.input-group
      .col-md-6
        .form-group
          .input-group
            = f.text_field :hdate_gteq, size: 2,  :class => "form-control date_picker_reverse", :value => @search.hdate_gteq.try(:strftime, '%d-%m-%Y')
            .input-group-addon
              .small=t('to')
            = f.text_field :hdate_lteq, size: 2,  :class => "form-control date_picker_reverse", :value => @search.hdate_lteq.try(:strftime,'%d-%m-%Y')
      %span.input-group-btn
        %button.btn.btn-sm.btn-default.right{:type => "submit"}
          %i.fa.fa-search.fa-fw