- model_class = Holiday
.page-header
  %h1= t 'holiday.title'
= render 'shared/flashes'

.row
  .col-md-offset-1
    / Nav tabs
    %ul.nav.nav-tabs
      %li.active= link_to (t 'holiday.details'),"#fingerprint_details", "data-toggle" => "tab"

    / display 
    .tab-content{style:"padding-top:1em"}
      #fingerprint_details.tab-pane.active  
        .col-md-8.col-md-offset-1
          %dl.dl-horizontal
            %dt= t'holiday.hname'
            %dd=h @holiday.hname

            %dt= t'holiday.hdate'
            %dd=h @holiday.try(:hdate).try(:strftime,  '%d %b %Y')

.row
  .col-md-7.col-md-offset-3
    %hr
    .form-actions
      = link_to content_tag(:i, "", :class => "fa fa-arrow-left ") + " " + t('holiday.list'), staff_holidays_path, :class => 'btn btn-default'
      = link_to content_tag(:i, "", :class => "fa fa-edit") + " " + (t 'actions.edit'), edit_staff_holiday_path(@holiday),  :class => 'btn btn-primary' 
      = link_to content_tag(:i, "", :class => "fa fa-trash-o icon-white") + " " + t('.destroy', :default => t("helpers.links.destroy")), |
          staff_holiday_path(@holiday),                                                                                                    |
          :method => 'delete',                                                                                                           |
          :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },                   |
          :class => 'btn btn-danger'
