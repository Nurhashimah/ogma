- model_class = Leaveforstaff
.page-header
  %h1= t('staff_leave.list')#, :default => model_class.model_name.human.pluralize
  
.navbar.navbar-inverse{role: "navigation", style: "padding-right:40px;"}
  %ul.nav.navbar-nav
    %li= link_to content_tag(:li, fa_icon("asterisk", text: (t 'actions.new'))), new_staff_leaveforstaff_path
  %ul.nav.navbar-nav.navbar-right
    %li= link_to content_tag(:li, fa_icon("search", text: (t 'actions.search'))), "#", class: "index_search_bar"
    %li= link_to content_tag(:li, fa_icon("print", text: (t 'actions.print'))), "#"
	
.search{style: "display:none;"}
  //= render "index_search"
  
.row
  %table.table-striped.table-hover.ogma
    %thead
      %tr
        - if current_user.college.code=='kskbjb '
          %th{width: '20%'}= sort_link(@search, :staff_id, t('staff_leave.id'))
        - else
          %th{width: '20%'}= sort_link(@search, :staff_id, t('staff_leave.staff_id'))
        %th{width: '10%'}= sort_link(@search, :leavetype, t('staff_leave.leavetype'))
        %th{width: '15%'}= sort_link(@search, :leavestartdate, t('staff_leave.from')) + ("/") + sort_link(@search, :leavenddate, t('staff_leave.to')) 
        %th{width: '10%'}= sort_link(@search, :leavedays, t('staff_leave.duration')) 
        /%th{width: '25%'}= sort_link(@search, :reason, t('staff_leave.reason'))
        %th{width: '15%'}=(t 'staff_leave.supported')+"?"
        %th{width: '10%'}=(t 'staff_leave.approved')+"?"
        %th{width: '20%'}= sort_link(@search, :replacement_id, t('staff_leave.replacement'))  

    %tbody
      = render "index_search"
      - @leaveforstaffs.each do |leaveforstaff|
        %tr
          - if current_user.college.code=='kskbjb'
            %td= link_to leaveforstaff.applicant.try(:mykad_with_staff_name), staff_leaveforstaff_path(leaveforstaff)
          - else
            %td= link_to leaveforstaff.applicant.staff_with_rank, staff_leaveforstaff_path(leaveforstaff)
          %td= (DropDown::STAFFLEAVETYPE.find_all{|disp, value| value == leaveforstaff.leavetype}).map {|disp, value| disp} [0]
          %td
            = leaveforstaff.leavestartdate.try(:strftime, '%d-%m-%Y')
            %br= leaveforstaff.leavenddate.try(:strftime, '%d-%m-%Y')
          %td= leaveforstaff.leave_for.to_s + (" ") +   (t 'staff_leave.days')
          /%td= leaveforstaff.reason
          %td
            - if leaveforstaff.approval1?
              = leaveforstaff.approval1_id.blank? ? (t 'not_required') : (fa_icon('check'))
          %td= leaveforstaff.approver2? ? fa_icon('check') : fa_icon('times')
          %td= leaveforstaff.replacement_id.blank? ? "None" : leaveforstaff.replacement.name
         
  .right{style:"padding:0 30px; margin:0;"}= paginate @leaveforstaffs, :theme => 'twitter-bootstrap-3'