- model_class = Leaveforstaff
.page-header
  %h1= current_user.college.code=='kskbjb' ? @leaveforstaff.applicant.mykad_with_staff_name : @leaveforstaff.applicant.staff_with_rank

= render 'shared/flashes'

.row
  .col-md-offset-1
    %ul.nav.nav-tabs
      %li.active= link_to (t 'staff_leave.details'),"#apply", "data-toggle" => "tab"
      %li= link_to (t 'staff_leave.approve_leave'), "#approve", "data-toggle" => "tab"
	  
.tab-content.col-md-offset-1
  #apply.tab-pane.fade.in.active
    .col-md-8.col-md-offset-1
      %dl.dl-horizontal
        = render 'applyshow'
        %br
        %dt= t 'staff_leave.replacement'
        %dd= @leaveforstaff.replacement_id.blank? ? "" : @leaveforstaff.replacement.staff_with_rank

        %dt
          =(t 'staff_leave.leave_balance')
          %br=(t 'staff_leave.balance_before')
        %dd
          - if !@leaveforstaff.applicant.appointdt.nil? && !@leaveforstaff.applicant.staffgrade.nil?
            =@leaveforstaff.balance_before
          - else
            .text-red
              - if @leaveforstaff.applicant.appointdt.nil?
                =(t 'staff_leave.appointdt_not_exist')
              - if @leaveforstaff.applicant.staffgrade.nil?
                =(t 'staff_leave.staffgrade_not_define')
        %dt
          = (t 'staff_leave.leave_balance')
          %br=(t 'staff_leave.balance_after')
        %dd= @leaveforstaff.applicant.appointdt.nil? ? (t 'staff_leave.appointdt_not_exist') : @leaveforstaff.balance_after unless @leaveforstaff.applicant.staffgrade.nil?
   
        %dt= t 'staff_leave.entitlement'
        %dd= @leaveforstaff.applicant.appointdt.nil? ? (t 'staff_leave.appointdt_not_exist') : @leaveforstaff.leave_balance.to_s+"/"+@leaveforstaff.cuti_rehat_entitlement.to_s unless @leaveforstaff.applicant.staffgrade.nil?
        
  #approve.tab-pane.fade
    .col-md-8.col-md-offset-1
      %dl.dl-horizontal
        %dt= t 'staff_leave.endorser_decision'
        %dd
          /- unless @leaveforstaff.approval1.blank?
          /  - if @leaveforstaff.college.code=='kskbjb'
          /    =h @leaveforstaff.approval1? ? (t 'staff_leave.support') : (t 'staff_leave.reject')
          /  - else
          /    - if @leaveforstaff.approval1?
          /      =h @leaveforstaff.approval1_id!=nil ? t('endorsed') : (t 'not_required')
          /      /=h @leaveforstaff.approval1_id!=nil ? t('staff_leave.approved')+t("by2")+@leaveforstaff.seconder.name+t("on2")+@leaveforstaff.approval1date.try(:strftime, "%d %b %Y") : (t 'not_required')
          /    - else
          /      =t("staff_leave.rejected") 
          ////////
          - if @leaveforstaff.approval1_id.blank?
            =t 'not_required'
          - else
            - if Staff.valid_staffs.pluck(:id).include?(@leaveforstaff.approval1_id)
              - b=@leaveforstaff.seconder.coemail.blank? ? " <span style='color:red;'>*</span>" : ""
            - else
              - b=""
            - if @leaveforstaff.approval1==true
              = t 'staff_leave.supported'
            - elsif @leaveforstaff.approval1==false
              .text-red=t 'staff_leave.rejected'
            - else
              =t 'staff_leave.awaiting_support'
          ////////
          
        %dt= t 'staff_leave.endorsed_name'
        %dd=h @leaveforstaff.approval1_id.blank? ? "-" : "#{@leaveforstaff.try(:seconder).try(:staff_with_rank_position)} #{b}".html_safe
 
        %dt= t 'staff_leave.endorsed_date'
        %dd=h shortmonthname(@leaveforstaff.approval1date) if @leaveforstaff.approval1date.blank? == false

        %br

        %dt= t 'staff_leave.approver_decision'
        %dd
          /- unless @leaveforstaff.approver2.blank?
          /  =h @leaveforstaff.approver2? ? (t 'approved') : (t 'staff_leave.reject')
          /////////
          - if @leaveforstaff.approval2_id.blank? 
            = (t 'not_required')
          - else
            - if Staff.valid_staffs.pluck(:id).include?(@leaveforstaff.approval2_id)
              - c=@leaveforstaff.approver.coemail.blank? ? " <span style='color:red;'>*</span>" : ""
            - else
              - c=""
            - if @leaveforstaff.approver2==true
              =t 'staff_leave.approved'
            - elsif @leaveforstaff.approver2==false  
              =t 'staff_leave.rejected'
            - else
              - if @leaveforstaff.approval1==true
                = t 'staff_leave.awaiting_approval'
          /////////
        
        %dt= t 'staff_leave.approval_name'
        %dd=h  @leaveforstaff.approval2_id.blank? ? "-" : "#{@leaveforstaff.try(:approver).try(:staff_with_rank_position)} #{c}".html_safe
  
        %dt= t 'staff_leave.approve_date'
        %dd=h shortmonthname(@leaveforstaff.approval2date) if @leaveforstaff.approval2date.blank? == false

.row
  .col-md-6.col-md-offset-3
    %hr
    .col-md-offset-1
      - noemail=noemail||0
      - if @leaveforstaff.applicant.coemail.blank?
        - noemail=1
      - elsif @leaveforstaff.approval1_id.blank? == false && @leaveforstaff.seconder.coemail.blank?
        - noemail=1
      - elsif @leaveforstaff.approval2_id.blank? == false && @leaveforstaff.approver.coemail.blank?
        - noemail=1
      - if noemail==1
        %i.small="#{t('remarks')} : <span style='color:red'>* </span>#{t('staff_leave.email_not_available')}".html_safe
    %br
    
    .form-actions
      = link_to content_tag(:i, "", :class => "fa fa-arrow-left ") + " " + t('.back', :default => t("helpers.links.back")), staff_leaveforstaffs_path, :class => 'btn btn-default'
      /- if @leaveforstaff.college.code!='kskbjb'
      - permitted_to? :borang_cuti, :staff_leaveforstaffs do
        = link_to content_tag(:i, "", class: "fa fa-file-pdf-o"), borang_cuti_staff_leaveforstaff_path(@leaveforstaff, format: "pdf"), class: "btn btn-default", "data-toggle" => "tooltip", title: t('staff_leave.leave_form')
      /- if @current_user.userable_id == @leaveforstaff.staff_id
      /- permitted_to? :edit, :staff_leaveforstaffs do
      /  = link_to content_tag(:i, "", :class => "fa fa-edit") + " " + t('.edit', :default => t("helpers.links.edit")), edit_staff_leaveforstaff_path(@leaveforstaff), :class => 'btn btn-primary'
      /- if @current_user.userable_id == @leaveforstaff.approval1_id
      - permitted_to? :processing_level_1, :staff_leaveforstaffs do
        = link_to content_tag(:i, "", :class => "fa fa-edit") + " " + t('helpers.links.endorse'), processing_level_1_staff_leaveforstaff_path(@leaveforstaff),  :class => 'btn btn-primary' unless @leaveforstaff.approval1_id.blank?
      /- if @current_user.userable_id == @leaveforstaff.approval2_id
      - permitted_to? :processing_level_2, :staff_leaveforstaffs do
        = link_to content_tag(:i, "", :class => "fa fa-edit") + " " + t('helpers.links.approve'), processing_level_2_staff_leaveforstaff_path(@leaveforstaff),  :class => 'btn btn-primary' unless @leaveforstaff.approval2_id.blank?
      - permitted_to? :delete, :staff_leaveforstaffs do
        = link_to content_tag(:i, "", :class => "fa fa-trash-o icon-white") + " " + t('helpers.links.destroy'), |
          staff_leaveforstaff_path(@leaveforstaff),                                                                                                    |
          :method => 'delete',                                                                                                           |
          :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },                   |
          :class => 'btn btn-danger'
        