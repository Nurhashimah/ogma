- model_class = Leaveforstaff
.page-header
  %h1=t 'staff.travel_request.title'

= render 'shared/flashes'

.row
  .col-md-offset-1
    / Nav tabs
    %ul.nav.nav-tabs
      %li.active= link_to (t 'staff.staffleave.details'),"#applyshow", "data-toggle" => "tab"
      %li= link_to (t 'staff.staffleave.approve_leave'), "#approve_leave", "data-toggle" => "tab"
	  
	  
#applyshow.tab-pane.active
  %br
  =render 'applyshow'
		  
    %dt= t 'staffleave.replacement_id'
    %dd=h @leaveforstaff.replacement_id.blank? ? "" : @leaveforstaff.replacement.name
          
    %dt= t 'staffleave.entitlement'
    %dd=h @leaveforstaff.leave_balance  @leaveforstaff.cuti_rehat_entitlement
		  
#approve_leave.tab-pane.active
  %br 
    %dt= t 'staffleave.approval1'
    %dd=h @leaveforstaff.approval1? ? "Approved" : "Not Approved"
          
    %dt= t 'staffleave.approval1_id'
    %dd=h @leaveforstaff.approval1_id.blank? ? "" : @leaveforstaff.seconder.name
		  
    %dt= t 'staffleave.approval1date'
    %dd=h @leaveforstaff.approval1date
		  
    %dt= t 'staffleave.approver2'
    %dd=h @leaveforstaff.approver2? ? "Approved" : "Not Approved"
		  
    %dt= t 'staffleave.approval2_id'
    %dd=h  @leaveforstaff.approval2_id.blank? ? "Not Required" : @leaveforstaff.endorser
		  
    %dt= t 'staffleave.approval2date'
    %dd=h @leaveforstaff.approval2date
          
		  
.row
  .col-md-4.col-md-offset-2
    %hr
    .form-actions
      = link_to content_tag(:i, "", :class => "fa fa-arrow-left ") + " " + t('.back', :default => t("helpers.links.back")), staff_leaveforstaffs_path, :class => 'btn btn-default'
      = link_to content_tag(:i, "", :class => "fa fa-edit") + " " + t('.edit', :default => t("helpers.links.edit")), edit_staff_leaveforstaff_path(@leaveforstaff), :class => 'btn btn-primary'
      = link_to content_tag(:i, "", :class => "fa fa-trash-o icon-white") + " " + t('helpers.links.destroy'), |
        staff_leaveforstaff_path(@leaveforstaff),                                                                                                    |
        :method => 'delete',                                                                                                           |
        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },                   |
        :class => 'btn btn-danger'
        