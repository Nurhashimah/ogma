- model_class = Staff
.page-header
  %h1= @staff.name

= render 'shared/flashes'

.row
  .col-md-1.col-md-offset-1
    - if @staff.photo.exists? then
      = image_tag @staff.photo.url
    - else
      %img{:src => "http://placekitten.com/150/200"}/ 
  .col-md-8
    %dl.dl-horizontal
      %dt= t 'staff.icno', :default => model_class.human_attribute_name(:icno) + ":"
      %dd= @staff.icno
      
      %dt= t 'staff.name', :default => model_class.human_attribute_name(:name) + ":"
      %dd
        = @staff.title.try(:name)
        = @staff.name
    
      %dt= t 'staff.code', :default => model_class.human_attribute_name(:code) + ":"
      %dd= @staff.code

      %dt= t 'staff.fileno', :default => model_class.human_attribute_name(:fileno) + ":"
      %dd= @staff.fileno
      
      %dt= t 'staff.position'
      %dd= @staff.try(:position).try(:name)
      
      %dt= t 'staff.coemail', :default => model_class.human_attribute_name(:coemail) + ":"
      %dd= @staff.coemail
      
      %dt= t 'staff.cobirthdt', :default => model_class.human_attribute_name(:cobirthdt) + ":"
      %dd= @staff.cobirthdt.try(:strftime, '%d %b %Y')

      %dt= t 'staff.birthcertno', :default => model_class.human_attribute_name(:birthcertno) + ":"
      %dd= @staff.birthcertno

      %dt= t 'staff.age', :default => model_class.human_attribute_name(:age) + ":"
      %dd= @staff.age
      
.row
  .col-md-4.col-md-offset-3
    %hr
    .form-actions
      = link_to content_tag(:i, "", :class => "fa fa-arrow-left ") + " " + t('.back', :default => t("helpers.links.back")), staff_infos_path, :class => 'btn btn-default'
      = link_to content_tag(:i, "", :class => "fa fa-edit") + " " + t('.edit', :default => t("helpers.links.edit")), '#', :class => 'btn btn-primary bogus' #edit_staff_info_path(@staff)
      = link_to content_tag(:i, "", :class => "fa fa-trash-o icon-white") + " " + t('.destroy', :default => t("helpers.links.destroy")), |
        staff_info_path(@staff),                                                                                                    |
        :method => 'delete',                                                                                                           |
        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },                   |
        :class => 'btn btn-danger'
              