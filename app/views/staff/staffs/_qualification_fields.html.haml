%fieldset
  = f.hidden_field :_destroy
  .row
    .col-sm-offset-2.col-sm-2= f.select :level_id, DropDown::QTYPE, {prompt: "Select Qualification Level"}, {class: 'selectpicker', "data-width"=>"auto"}
    .col-sm-2= f.text_field :qname,     placeholder: 'Qualification Name',  class: 'form-control'
    .col-sm-4= f.text_field :institute, placeholder: 'Institute Name',      class: 'form-control'
    .col-sm-1

      //= link_to image_tag("delete.png", :border => 0, :title => 'Remove'), class: "remove_fields"

      = link_to content_tag(:i, "", class: "fa fa-trash-o"), data: {"data-toggle" => "tooltip", title: "Delete"}, class: "btn btn-danger remove_fields"
  :javascript
    $('.selectpicker').selectpicker('render');