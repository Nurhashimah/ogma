%fieldset
  = f.hidden_field :_destroy
  .row
    .col-sm-5= f.text_field :type_model, placeholder: (t 'staff.vehicles.type_model'), class: 'form-control'
    .col-sm-2= f.text_field :reg_no,     placeholder: (t 'staff.vehicles.reg_no'),  class: 'form-control'
    .col-sm-2= f.text_field :cylinder_capacity, placeholder: (t 'staff.vehicles.cylinder_capacity'), class: 'form-control'
    .col-sm-1
      /= link_to content_tag(:i, "", class: "fa fa-trash-o"), data: {"data-toggle" => "tooltip", title: "Delete"}, class: "btn btn-danger remove_fields"
  :javascript
    $('.selectpicker').selectpicker('render');