- model_class = TravelClaimsTransportGroup
.page-header
  %h1= t('staff.travel_claims_transport_groups.title')
  
.navbar.navbar-inverse{role: "navigation", style: "padding-right:40px;"}
  %ul.nav.navbar-nav
    - permitted_to? :create, :staff_travel_claims_transport_groups do
      %li= link_to content_tag(:li, fa_icon("asterisk", text: (t 'actions.new'))), new_staff_travel_claims_transport_group_path
  %ul.nav.navbar-nav.navbar-right
    %li.toga= link_to content_tag(:li, fa_icon("search", text: (t 'actions.search'))), "#", class: "index_search_bar"
    %li.dropdown
      %a.dropdown-toggle{"data-toggle" => "dropdown", :href => "#"}
        = fa_icon "print", text: (t 'actions.print')
        %b.caret

.row
  %table.table-striped.table-hover.ogma
    %thead
      %tr
        %th{width: '30%'}=sort_link(@search, :group_name, (t 'staff.travel_claims_transport_groups.group_name'))
        %th{width: '40%'}=t 'staff.travel_claims_transport_groups.salary'
        %th{width: '30%'}=t 'staff.travel_claims_transport_groups.cylinder_capacity'
        
    %tbody
    = render "index_search"
    - @travel_claims_transport_groups.each do |travel_claims_transport_group|
      %tr
        %td=link_to travel_claims_transport_group.group_name, edit_staff_travel_claims_transport_group_path(travel_claims_transport_group)
        %td=travel_claims_transport_group.salary_details
        %td=travel_claims_transport_group.cc_details

  .right{style:"padding:0 30px; margin:0;"}= paginate @travel_claims_transport_groups, :theme => 'twitter-bootstrap-3'