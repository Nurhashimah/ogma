= search_form_for @search, url: staff_travel_claims_transport_groups_path,  class: "form-inline" do |f|
  %tr.search_row{style: "display: none;"}
    %td=f.text_field :group_name_cont, class:  'form-control'
    %td
      .col-md-4=f.text_field :salary_low_eq, class: 'form-control', placeholder: (t 'staff.travel_claims_transport_groups.low')
      .col-md-4=f.text_field :salary_high_eq, class: 'form-control', placeholder: (t 'staff.travel_claims_transport_groups.high')
    %td 
      .col-md-4=f.text_field :cc_low_eq, class: 'form-control', placeholder: (t 'staff.travel_claims_transport_groups.low')
      .col-md-4
        .input-group
          =f.text_field :cc_high_eq, class: 'form-control', placeholder: (t 'staff.travel_claims_transport_groups.high')
          %span.input-group-btn
            %button.btn.btn-sm.btn-default.right{:type => "submit"}
              %i.fa.fa-search.fa-fw
