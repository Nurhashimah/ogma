- model_class = Ptbudget
.page-header
  %h1= t 'ptbudgets.budget_details', :default => model_class.model_name.human
= render 'shared/flashes'

.row
  .col-md-8
    %dl.dl-horizontal

      %dt= t 'ptbudgets.budget', :default => model_class.human_attribute_name(:budget) + ":"
      %dd= ringgols @ptbudget.budget

      %dt= t 'ptbudgets.fys', :default => model_class.human_attribute_name(:fiscalstart) + ":"
      %dd= @ptbudget.fiscalstart


.row
  .col-md-4.col-md-offset-3
    %hr
    .form-actions
      = link_to content_tag(:i, "", :class => "fa fa-arrow-left ") + " " + t('.back', :default => t("helpers.links.back")), ptbudgets_path, :class => 'btn btn-default'
      = link_to content_tag(:i, "", :class => "fa fa-edit") + " " + t('.edit', :default => t("helpers.links.edit")), edit_ptbudget_path(@ptbudget), :class => 'btn btn-primary'
      = link_to content_tag(:i, "", :class => "fa fa-trash-o icon-white") + " " + t('.destroy', :default => t("helpers.links.destroy")), |
        ptbudget_path(@ptbudget),                                                                                                    |
        :method => 'delete',                                                                                                           |
        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },                   |
        :class => 'btn btn-danger'