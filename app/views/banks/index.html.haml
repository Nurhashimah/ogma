- model_class = Bank
.page-header
  %h1= t('banks.list')#, :default => model_class.model_name.human.pluralize
  
.navbar.navbar-inverse{role: "navigation", style: "padding-right:40px;"}
  %ul.nav.navbar-nav
    %li= link_to content_tag(:li, fa_icon("asterisk", text: (t 'actions.new'))), "#"
  %ul.nav.navbar-nav.navbar-right
    %li= link_to content_tag(:li, fa_icon("search", text: (t 'actions.search'))), "#", class: "index_search_bar"
      
.row
  %table.table-striped.table-hover.ogma
    %thead
      %tr
        %th= sort_link(@search, :short_name, (t 'banks.short_name'))
        %th= sort_link(@search, :long_name, (t 'banks.long_name'))
        %th= (t 'banks.active')
    %tbody
      = render "index_search"
      - @bank.each do |bank|
        %tr
          %td= link_to bank.short_name, bank_path(bank)
          %td= bank.long_name
          /%td= asset.purchasedate
     
  /.right{style:"padding:0 30px; margin:0;"}= paginate @banks, :theme => 'twitter-bootstrap-3'