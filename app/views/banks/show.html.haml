- model_class = Bank
.page-header
  %h1= 'Bank Details'
  
.tab-content.col-md-offset-1
  %dl.dl-horizontal
    %dt= t 'banks.short_name'
    %dd= @bank.try(:short_name)
    %dt= t 'banks.long_name'
    %dd= @bank.try(:long_name)
      
.row
  .col-md-6.col-md-offset-2
    %hr
    .form-actions
      = link_to content_tag(:i, "", :class => "fa fa-arrow-left "), banks_path, {class: "btn btn-default", "data-toggle" => "tooltip", title: "Asset Index"}
      /= link_to content_tag(:i, "", :class => "fa fa-edit") , edit_banks_path(@banks),  {class: "btn btn-primary", "data-toggle" => "tooltip", title: t("actions.edit")}
      = link_to content_tag(:i, "", :class => "fa fa-trash-o icon-white"), |
        banks_path(@banks),                                                                                                    |
        :method => 'delete',                                                                                                           |
        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },                   |
        :class => 'btn btn-danger', "data-toggle" => "tooltip", title: t("actions.delete")