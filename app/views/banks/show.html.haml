- model_class = Bank
.page-header
  %h1= (t 'banks.details')
= render 'shared/flashes'
  
.tab-content.col-md-offset-1
  %dl.dl-horizontal
    %dt= t 'banks.short_name'
    %dd= @bank.try(:short_name)
    
    %dt= t 'banks.long_name'
    %dd= @bank.try(:long_name)
    
    %dt= t 'banks.active'
    %dd= @bank.try(:active?) ? "Yes" : "No"
        
.row
  .col-md-4.col-md-offset-2
    .form-actions
      = link_to content_tag(:i, "", class: "fa fa-arrow-left ") + " " + t('.back', :default => t("helpers.links.back")), banks_path, class: 'btn btn-default'
      = link_to content_tag(:i, "", class: "fa fa-edit") + " " + t('.edit', :default => t("helpers.links.edit")), edit_bank_path(@bank), class: 'btn btn-primary'
      = link_to content_tag(:i, "", class: "fa fa-trash-o icon-white") + " " + t('.destroy', :default => t("helpers.links.destroy")), |
        bank_path(@bank),                                                                                                    |
        :method => 'delete',                                                                                                           |
        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },                   |
        class: 'btn btn-danger'