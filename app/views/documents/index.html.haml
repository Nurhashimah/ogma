- model_class = Document
.page-header
  %h1= t('document.list_of_document')#, :default => model_class.model_name.human.pluralize
  
.navbar.navbar-inverse{role: "navigation", style: "padding-right:40px;"}
  %ul.nav.navbar-nav
    %li= link_to content_tag(:li, fa_icon("asterisk", text: (t 'actions.new'))), "#", class: 'bogus'
  %ul.nav.navbar-nav.navbar-right
    %li.toga= link_to content_tag(:li, fa_icon("search", text: (t 'actions.search'))), "#", class: "toga"
    %li= link_to content_tag(:li, fa_icon("print", text: (t 'actions.print'))), "#", class: 'bogus'


.row
  %table.table-striped.table-hover.ogma
    %thead
      %tr
        %th= sort_link(@search, :serialno, (t 'document.serial_no'))
        %th= sort_link(@search, :refno, (t 'document.ref_no'))
        %th= sort_link(@search, :category, (t 'document.category'))
        %th{:style => "width:15%;"}= sort_link(@search, :title, (t 'document.title'))
        %th{:style => "width:7%;"}= sort_link(@search, :letterdt, (t 'document.letter_date'))
        %th{:style => "width:7%;;"}= sort_link(@search, :letterxdt, (t 'document.received_date'))
        %th{:style => "width:15%;;"}= sort_link(@search, :from, (t 'document.from'))
        %th{:style => "width:13%;;"}= sort_link(@search, :stafffiled_id, (t 'document.circulate_to'))
        %th{:style => "width:10%;"}= sort_link(@search, :action_notifications, (t 'document.action_notifications'))
        %th{style: "width:5%;"}= sort_link(@search, :closed, (t 'document.closed'))

    %tbody
    = render "index_search"
    - @documents.each do |document|
      %tr
        %td= document.serialno
        %td= document.refno
        %td= document.category
        %td= document.title
        %td= l(document.letterdt)
        %td= l(document.letterxdt)
        %td= document.from
        %td/
        - document.staffs.each_with_index do |doc_recepient,ind|
          (#{ind+=1}) #{h doc_recepient.name} 
          %br
        %td= document.otherinfo
        %td= document.closed? ? fa_icon("check", :border => 0) : ""
		
  .right{style:"padding:0 30px; margin:0;"}= paginate @documents, :theme => 'twitter-bootstrap-3'