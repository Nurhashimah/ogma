- model_class = Document
.page-header
  %h1= @document.doc_details

= render 'shared/flashes'

.row
  .col-md-8
    %dl.dl-horizontal
      %dt= t 'document.serial_no' , :default => model_class.human_attribute_name(:serialno) + ":"
      %dd= @document.serialno
      
      %dt= t 'document.ref_no' , :default => model_class.human_attribute_name(:refno) + ":"
      %dd=  @document.refno
    
      %dt= t 'document.title' , :default => model_class.human_attribute_name(:title) + ":"
      %dd= @document.title

      %dt= t 'document.category' , :default => model_class.human_attribute_name(:category) + ":"
      %dd= (Document::CATEGORY.find_all{|disp, value| value == @document.category.to_s}).map {|disp, value| disp} [0]

      %dt= t 'document.letterdt' , :default => model_class.human_attribute_name(:letterdt) + ":"
      %dd= l(@document.letterdt)
		  
      %dt= t 'document.letterxdt' , :default => model_class.human_attribute_name(:letterxdt) + ":"
      %dd= l(@document.letterxdt)
    
      %dt= t 'document.from' , :default => model_class.human_attribute_name(:from) + ":"
      %dd= @document.from

      %dt= t 'document.stafffiled_id' , :default => model_class.human_attribute_name(:stafffiled_id) + ":"
      %dd= check_kin {@document.stafffiled_details}

      %dt= t 'document.file_no' , :default => model_class.human_attribute_name(:file_id) + ":"
      %dd= check_kin {@document.file_details}

      %dt= t 'document.uploaded' , :default => model_class.human_attribute_name(:data) + ":"
      %dd
        - if @document.data.exists? then
          = @document.data_file_name
          = link_to (t 'document.download'), @document.data.url 
          ||
          \#{link_to "ALT", @document.data.url}
        - else
          No File Available
		  
      %dt= t 'document.circulate_minute_action' , :default => model_class.human_attribute_name(:closed) + ":" 
      %dt= t 'document.minit_tindakan'
      %dd= @document.otherinfo

      %dt= t 'document.circulate_to' , :default => model_class.human_attribute_name(:circulate_to) + ":"
      %dd
      - @document.staffs.each_with_index do |doc_recepient,ind|
        - if ind!=0
          %br/
          (#{ind+=1}) #{doc_recepient.name}

      %dt= t 'document.circulate_minute_date' , :default => model_class.human_attribute_name(:date) + ":"
      -#%dd= l(@document.cc1date)

      %dt= t 'document.action_type' , :default => model_class.human_attribute_name(:action) + ":"
      %dd= (Document::ACTION.find_all{|disp, value| value == @document.cctype_id.to_s}).map {|disp, value| disp} [0]
	  
      %dt= t 'document.file_closed' , :default => model_class.human_attribute_name(:closed) + ":"
      %dd= @document.closed? ? "Yes" : "No"
	  
.row
  .col-md-4.col-md-offset-3
    %hr
    .form-actions
      = link_to content_tag(:i, "", :class => "fa fa-arrow-left ") + " " + t('.back', :default => t("helpers.links.back")), documents_path, :class => 'btn btn-default'
      = link_to content_tag(:i, "", :class => "fa fa-edit") + " " + t('.edit', :default => t("helpers.links.edit")), "#", :class => 'btn btn-primary' && 'bogus'
      = link_to content_tag(:i, "", :class => "fa fa-trash-o icon-white") + " " + t('.destroy', :default => t("helpers.links.destroy")), |
        document_path(@document),                                                                                                    |
        :method => 'delete',                                                                                                           |
        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },                   |
        :class => 'btn btn-danger'
		
		
-#edit_document_path(@document)		