- model_class = Document
.col-md-8.col-md-offset-1
  %dl.dl-horizontal

    %dt= t 'document.category' , :default => model_class.human_attribute_name(:category) + ":"
    %dd= @document.render_document
    
    %dt= t 'document.distribution_type', :default => model_class.human_attribute_name(:distribution_type) + ":"
    %dd= @document.distribution_type==1 ? (t 'document.internal') : (t 'document.external')

    %dt= t 'document.letterdt' , :default => model_class.human_attribute_name(:letterdt) + ":"
    %dd= @document.letterdt.try(:strftime, "%d %b %Y" )
  
    %dt=@document.distribution_type==1 ? (t 'document.letterxdt_recv') : (t 'document.letterxdt_sent')
    %dd= @document.letterxdt.try(:strftime, "%d %b %Y" )
    
    %dt= @document.distribution_type==1 ? (t 'document.from') : (t 'document.to')
    %dd= @document.from

    %dt= t 'document.stafffiled_id' , :default => model_class.human_attribute_name(:stafffiled_id) + ":"
    %dd= @document.college.code=='amsas' ? @document.stafffilled.staff_with_rank_position : check_kin {@document.stafffiled_details}

    %dt= t 'document.file_no' , :default => model_class.human_attribute_name(:file_id) + ":"
    %dd{style: 'padding-left: 70px;'}= check_kin {@document.file_details} 

    %dt= t 'document.uploaded' , :default => model_class.human_attribute_name(:data) + ":"
    %dd
      - if @document.data.exists? then
        = @document.data_file_name
        = link_to (t 'download'), @document.data.url 
      - else
        =t 'document.no_attachment'
  %br