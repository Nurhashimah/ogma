- model_class = Document
.col-md-8.col-md-offset-1
  %dl.dl-horizontal
    %dt= t 'document.cc1staff_id' , :default => model_class.human_attribute_name(:cc1staff_id) + ":"
    %dd=h @document.cc1staff.try(:staff_with_rank_position)
    
    %dt= t 'document.cc1date' , :default => model_class.human_attribute_name(:cc1staff_id) + ":"
    %dd=h @document.cc1date.try(:strftime, '%d-%m-%Y')