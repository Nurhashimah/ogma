.col-md-offset-2 
  .form-group
    .col-sm-2.control-label
      = f.label t 'document.circulate_minute_action', for: :otherinfo
      = f.label t 'document.minit_tindakan'
    .col-md-8
      = f.text_area :otherinfo, :size => '40x3'

  .form-group
    .col-sm-2.control-label
      = f.label t 'document.action_type' , for: :cctype_id
    .col-md-4
      = f.select :cctype_id, DropDown::DOCUMENT_ACTION, {:prompt => "Select"}, class: 'selectpicker'

  - if @document.college.code=='amsas'
    .form-group
      .col-sm-2.control-label
        = f.label  t 'document.circulate_minute_date' , for: :cc2date
      .col-md-3
        = f.text_field :cc2date, class: 'form-control mandatory date_picker_reverse', value: Date.today.strftime('%d-%m-%Y')

    .form-group
      .col-sm-2.control-label
        = f.label t 'document.cc1closed'  , for: :cc1closed
      .col-md-3
        = f.check_box :cc2closed

  - else
    .form-group
      .col-sm-2.control-label
        = f.label  t 'document.circulate_minute_date' , for: :cc1date
      .col-md-3
        = f.text_field :cc1date, class: 'form-control mandatory date_picker_reverse', value: Date.today.strftime('%d-%m-%Y')
     
    .form-group
      .col-sm-2.control-label
        = f.label t 'document.cc1closed'  , for: :cc1closed
      .col-md-3
        = f.check_box :cc1closed

