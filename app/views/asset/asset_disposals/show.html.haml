- model_class = AssetDisposal
.page-header
  %h1= @disposed.asset.assetcode
= render 'shared/flashes'

%ul.nav.nav-tabs
  %li.active= link_to (t "asset.details"), "#details",     "data-toggle" => "tab"
  %li= link_to "Re-Value", "#value",     "data-toggle" => "tab"
  %li= link_to "Disposal Details", "#disposalditails",     "data-toggle" => "tab"
  

.tab-content.col-md-offset-1
  %dl.dl-horizontal
    %dt= t 'asset.assetcode'
    %dd= @disposed.asset.assetcode
  #details.tab-pane.fade.in.active
    %dl.dl-horizontal
      %dt= t 'asset.category'
      %dd= "#{@disposed.asset.typename} : #{@disposed.asset.name} : #{@disposed.asset.modelname}" 
      %dt  Age
      %dd= @disposed.try(:age)  
      %dt= t 'asset.serialno'
      %dd= @disposed.asset.serialno
      %dt Usage
      %dd= "#{@disposed.running_hours} Hrs Or #{@disposed.mileage} Km "
      %dt Duration Used
      %dd= @disposed.try(:age)
      %dt Current Condition 
      %dd= @disposed.current_condition  
      %dt Current Value
      %dd= currency(@disposed.current_value.to_f) 
      %dt Estimated Repair Cost
      %dd= currency(@disposed.est_repair_cost.to_f)	  	  
      %dt Estimated Value After Repair
      %dd= currency(@disposed.est_value_post_repair.to_f) 	  
      %dt Estimated Time to Next Failure if repaired (Month)
      %dd= @disposed.est_time_next_fail	  	  
      %dt repair Needed
      %dd= "1. #{@disposed.repair1_needed}"	  
      %dd= "2. #{@disposed.repair2_needed}"	
      %dd= "3. #{@disposed.repair3_needed}"		  	  	  
      %dt Justification For Disposal
      %dd= "1. #{@disposed.justify1_disposal}"	
      %dd= "2. #{@disposed.justify2_disposal}"
      %dd= "3. #{@disposed.justify3_disposal}"	  	  
      %dt Lembaga Pemeriksa
      %dd= "1. #{@disposed.inspect1or}"	 	
      %dd= "2. #{@disposed.inspect2or}"	
	  
  #value.tab-pane.fade.in
    %dl.dl-horizontal
      %dt New Value
      %dd= @disposed.revalue
      %dt Re Valued By
      %dd= @disposed.revaluer.try(:staff).try(:name)
      %dt Re Valued On
      %dd= @disposed.revalued_on
	  
  #disposalditails.tab-pane.fade.in
    %dl.dl-horizontal
      %dt Approval
      %dd= "#{@disposed.try(:document).try(:refno)} #{@disposed.try(:document).try(:title)} #{@disposed.try(:document).try(:letterdt)}"
      %dt Disposed
      %dd= @disposed.disposal_type
      - if @disposed.disposal_type == "transfer"
        %dt Transferred To	
        %dt= @disposed.receiver_name
      - elsif @disposed.disposal_type == "sold"
        %dt Receipt No
        %dd= @disposed.documentation_no	
      - elsif @disposed.disposal_type == "discard"	 
        %dt Method
        %dd= "#{@disposed.discard_options} at #{@disposed.discard_location} on #{@disposed.discarded_on.try(:strftime, "%d/%m/%y")} "   
        %dt Witnessed By
        %dd= "#{@disposed.discardw1tness.try(:staff).try(:name)} AND #{@disposed.discardw2tness.try(:staff).try(:name)}"				
      - elsif @disposed.disposal_type == "stock"	  
      - elsif @disposed.disposal_type == "others"
        %dt Method	
        %dd= @disposed.type_others_desc.titleze	   						  
      %dt Confirmed By
      %dd= "#{@disposed.disposed_by.try(:staff).try(:name)} On  #{@disposed.disposed_on}"
	  
.row
  .col-md-4.col-md-offset-2
    %hr
    .form-actions
      = link_to content_tag(:i, "", :class => "fa fa-arrow-left ") + " " + t('.back', :default => t("helpers.links.back")), asset_disposal_path, :class => 'btn btn-default'
      = link_to content_tag(:i, "", :class => "fa fa-file-pdf-o"), kewpa16_asset_disposal_path(@disposal, format: "pdf"), {class: "btn btn-default", "data-toggle" => "tooltip", title: "KEW.PA 16 PDF"}
      = link_to content_tag(:i, "", :class => "fa fa-file-pdf-o"), kewpa18_asset_disposal_path(@disposal, format: "pdf"), {class: "btn btn-default", "data-toggle" => "tooltip", title: "KEW.PA 18 PDF"}
      = link_to content_tag(:i, "", :class => "fa fa-file-pdf-o"), kewpa19_asset_disposal_path(@disposal, format: "pdf"), {class: "btn btn-default", "data-toggle" => "tooltip", title: "KEW.PA 19 PDF"}	  	  
      = link_to content_tag(:i, "", :class => "fa fa-edit") + " " + t('.edit', :default => t("helpers.links.edit")), edit_asset_disposal_path(@disposal), :class => 'btn btn-primary'
      = link_to content_tag(:i, "", :class => "fa fa-trash-o icon-white") + " " + t('.destroy', :default => t("helpers.links.destroy")), |
        asset_disposal_path(@disposal),                                                                                                    |
        :method => 'delete',                                                                                                           |
        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },                   |
        :class => 'btn btn-danger'
