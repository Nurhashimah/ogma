- if @asset_loan.new_record? == true
  - loaner = current_user.userable_id
- else
  - loaner = @asset_loan.staff_id
.col-md-6.col-md-offset-2
  .form-group
    .col-sm-2.control-label
      = f.label t 'asset.loan.staff_id', for: :staff_id
    .col-md-4
      = f.collection_select :staff_id, Staff.valid_staffs.order(rank_id: :asc, name: :asc), :id, :staff_with_rank_position_unit, {:include_blank =>t('helpers.prompt.select_staff'), :selected=>loaner},{class: 'selectpicker mandatory', "data-width"=>'350px'}               
  .form-group
    .col-sm-2.control-label
      = f.label t 'asset.loan.reasons', for: :reasons
    .col-md-6
      = f.text_field :reasons, class: 'form-control'
  .form-group
    .col-sm-2.control-label
      = f.label t 'asset.loan.requested_for', for: :loaned_on
    .col-md-3
      = f.text_field :loaned_on, class: 'date_picker_reverse form-control mandatory', value: @asset_loan.loaned_on.try(:strftime, '%d-%m-%Y')
  .form-group
    .col-sm-2.control-label
      = f.label t 'asset.loan.returned_date'
    .col-md-3
      = f.text_field :expected_on, class: 'date_picker_reverse form-control mandatory', value: @asset_loan.expected_on.try(:strftime, '%d-%m-%Y')
  .form-group
    .col-sm-2.control-label
      = f.label t 'asset.loan.loantype', for: :loantype
      %br
    .col-md-6
      .row
        .col-md-2= f.radio_button :loantype, 1, :id => 'loanmodeinternal',  :class => 'radio_action_options'
        .col-md-3= t 'asset.loan.internal'
        .col-md-2= f.radio_button :loantype, 2, :id => 'loanmodexternal',  :class => 'radio_action_options'
        .col-md-2= t 'asset.loan.external'

