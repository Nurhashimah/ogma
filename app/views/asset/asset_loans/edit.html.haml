- model_class = AssetLoan
.page-header
  %h1
    - if @asset_loan.asset.category_id==3 || @asset_loan.asset.category.description.downcase.include?("kenderaan")
      = (t 'asset.loan.edit2')+" : "+@asset_loan.asset.registration
    - else
      = t 'asset.loan.edit' if @asset_loan.is_approved == nil
      = t 'asset.loan.return' if @asset_loan.is_approved == true
      = @asset_loan.asset.assetcode
    - @unit_members = @asset_loan.unit_members
.row
  = form_for @asset_loan,  html: { multipart: true, class: 'form-horizontal' }  do |f| 
    = render 'shared/error_messages', object: f.object
    = f.hidden_field :loaned_by, value: @asset_loan.asset.assignedto_id
    - if @asset_loan.asset.category_id==3 || @asset_loan.asset.category.description.downcase.include?("kenderaan")
      /= render 'editform_vehicle', :f => f
      = render "asset/asset_loans/vehicle/editform_vehicle", :f => f
    - else
      = render 'editform', :f => f