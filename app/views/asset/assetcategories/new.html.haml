- model_class = Assetcategory
.page-header
  %h1= t 'asset.category.edit'
  
.row
  = form_for [:asset, @assetcategory],  html: { multipart: true, class: 'form-horizontal' }  do |f| 
    = render 'shared/error_messages', object: f.object
 
    .col-md-offset-1
      / Nav tabs
      %ul.nav.nav-tabs
        %li.active= link_to (t "asset.category.details"), "#details",  "data-toggle" => "tab" 
        
      /display
      .tab-content{style:"padding-top:1em"}
        #details.tab-pane.fade.in.active 
          .col-md-8.col-md-offset-1
            /%dl.dl-horizontal
            /  %dt= t 'role.name'
            /  %dd= @role.name
              
          .col-md-6.col-md-offset-2  
            .form-group
              .col-sm-2.control-label
                = f.label t 'asset.category.description', for: :description
              .col-md-8
                = f.text_field :description, class: 'form-control'
     
            .form-group
              .col-sm-2.control-label
                = f.label t 'asset.category.cattype_id', for: :description
              .col-md-8
                = f.select :cattype_id, Assetcategory::ASSETTYPE , {:include_blank => (t 'select')},{class: 'selectpicker'}
                
            .form-group
              .col-sm-2.control-label
                = f.label t 'asset.category.parent_id', for: :description
              .col-md-8
                = f.collection_select :parent_id, Assetcategory.all, :id, :description, {:include_blank => (t 'select')},{class: 'selectpicker'}
                
            %br

      .col-md-6.col-md-offset-1
        .form-group
          .col-sm-offset-2.col-sm-2
            = link_to content_tag(:i, "", :class => "fa fa-arrow-left ") + " " + t('.back', :default => t("helpers.links.back")), asset_assetcategories_path, :class => 'btn btn-default'
          .col-sm-3
            = f.submit t('update'), class: "btn btn-primary" 
 
