- model_class = Assetcategory
.page-header
  %h1= t 'asset.category.title'
= render 'shared/flashes'

.row
  .col-md-offset-1
    / Nav tabs
    %ul.nav.nav-tabs
      %li.active= link_to (t "asset.category.description"), "#description",     "data-toggle" => "tab"
      /%li= link_to (t "asset.loan.approval"), "#approval",     "data-toggle" => "tab" if @asset_loan.is_approved != nil 
      /%li= link_to (t "asset.loan.return"), "#return",    "data-toggle" => "tab" if @asset_loan.is_returned == true 

.tab-content.col-md-offset-1
  .col-md-8.col-md-offset-1
    %dl.dl-horizontal
      %dt= t 'asset.category.description'
      %dd= @assetcategory.description
      
      %dt= t 'asset.category.cattype_id'
      %dd= @assetcategory.render_cattype
     
      %dt=t 'asset.category.parent_id'
      %dd=h @assetcategory.try(:parent).try(:description)

.row
  .col-md-4.col-md-offset-3
    %hr
    .form-actions
      = link_to content_tag(:i, "", :class => "fa fa-arrow-left ") + " " + t('.back', :default => t("helpers.links.back")), asset_assetcategories_path, :class => 'btn btn-default'
      = link_to content_tag(:i, "", :class => "fa fa-edit") + " " + t('.edit', :default => t("helpers.links.edit")), edit_asset_assetcategory_path(@assetcategory), :class => 'btn btn-primary'
      = link_to content_tag(:i, "", :class => "fa fa-trash-o icon-white") + " " + t('.destroy', :default => t("helpers.links.destroy")), |
        asset_assetcategory_path(@assetcategory),                                                                                                    |
        :method => 'delete',                                                                                                           |
        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },                   |
        :class => 'btn btn-danger'
    