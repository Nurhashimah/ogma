- model_class = Stationery
.page-header
  %h1=t('stationery.new')

= render 'shared/flashes'

.row.fluid
  = form_for [:asset, @stationery], html: { multipart: true, class: 'form-horizontal' }  do |f| 
    = render 'shared/error_messages', object: f.object
    = f.hidden_field :college, value: current_user.college_id
    = render :partial => 'form', :locals => {:f => f}

    .col-md-offset-1
      .form-group
        .col-sm-offset-2.col-sm-1
          = link_to content_tag(:i, "", :class => "fa fa-arrow-left ") + " " + t('.back', :default => t("helpers.links.back")), asset_stationeries_path, :class => 'btn btn-default'
        .col-sm-offset-0.col-sm-2
          = f.submit t('create'), class: "btn btn-primary"