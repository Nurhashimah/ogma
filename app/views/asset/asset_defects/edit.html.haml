- model_class = AssetDefect
.page-header
  %h1
    = t 'actions.edit'
    = @defective.asset.assetcode

.row
  = form_for @defective,  html: { multipart: true, class: 'form-horizontal' }  do |f| 
    = render 'shared/error_messages', object: f.object
    
    .col-md-offset-1
      - if (@defective.reported_by == current_user.userable_id) || @is_admin
        %ul.nav.nav-tabs
          %li.active= link_to (t "asset.defect.details"), "#details_edit",   "data-toggle" => "tab"

        .tab-content.col-md-offset-1
          %dl.dl-horizontal
            %dt= t 'asset.assetcode'
            %dd= @defective.asset.assetcode

          #details_edit.tab-pane.fade.in.active
            %br
            = render 'tab_details_edit', :f => f

          .col-md-offset-1
            .form-group
              .col-sm-offset-2.col-sm-1
                = link_to content_tag(:i, "", :class => "fa fa-arrow-left ") + " " + t('.back', :default => t("helpers.links.back")), asset_defect_path(@defective), :class => 'btn btn-default'
              .col-sm-2{style: 'padding-left: 40px;'}
                = f.submit t('update'), class: "btn btn-primary" 

      - else
        .centre
          .text-red=t 'staff.travel_claim.edit_by_applicant'
        %br
        .row
          .centre= link_to content_tag(:i, "", :class => "fa fa-arrow-left ") + " " + t('.back', :default => t("helpers.links.back")), asset_defect_path(@defective), :class => 'btn btn-default'