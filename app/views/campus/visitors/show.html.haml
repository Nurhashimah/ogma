- model_class = Visitor
.page-header
  %h1=(t 'campus.visitors.title')
= render 'shared/flashes'

.row
  .col-md-8.col-md-offset-3
    %dl.dl-horizontal
      %dt=t 'campus.visitors.name'
      %dd=@visitor.visitor_with_title_rank
 
      %dt=t 'campus.visitors.icno'
      %dd=formatted_mykad(@visitor.icno)
      
      %dt=t 'campus.visitors.position'
      %dd=@visitor.try(:position)

      %dt=t 'campus.visitors.phoneno'
      %dd=@visitor.phoneno
      
      %dt=t 'campus.visitors.hpno'
      %dd=@visitor.hpno
      
      %dt=t 'campus.visitors.email'
      %dd=@visitor.email
      
      %dt=t 'campus.visitors.expertise'
      %dd=@visitor.expertise
      
      %dt=t 'campus.visitors.department_organisation'
      %dd=@visitor.address_book_id.blank? ? @visitor.department : @visitor.address_book.name

.row
  .col-md-6.col-md-offset-3
    %hr
    .col-md-offset-3
      .form-actions
        = link_to content_tag(:i, "", :class => "fa fa-arrow-left ") + " " + t('.back', :default => t("helpers.links.back")), campus_visitors_path, :class => 'btn btn-default'
        = link_to content_tag(:i, "", :class => "fa fa-edit") + " " + t('.edit', :default => t("helpers.links.edit")), edit_campus_visitor_path(@visitor),  :class => 'btn btn-primary'
        = link_to content_tag(:i, "", :class => "fa fa-trash-o icon-white") + " " + t('.destroy', :default => t("helpers.links.destroy")), |
        campus_visitor_path(@visitor),                                                                                                    |
        :method => 'delete',                                                                                                           |
        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },                   |
        :class => 'btn btn-danger'
