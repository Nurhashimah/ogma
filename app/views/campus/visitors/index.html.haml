- model_class = Visitor
.page-header
  %h1= t('campus.visitors.list')
  
= render 'shared/flashes'

.navbar.navbar-inverse{role: "navigation", style: "padding-right:40px;"}
  %ul.nav.navbar-nav
    - permitted_to? :create, :campus_visitors do
      %li= link_to content_tag(:li, fa_icon("asterisk", text: (t 'actions.new'))), new_campus_visitor_path
  %ul.nav.navbar-nav.navbar-right
    %li= link_to content_tag(:li, fa_icon("search", text: (t 'actions.search'))), "#", class: "index_search_bar"
    %li= link_to  (fa_icon "print", text: (t 'actions.print')),  visitor_list_campus_visitors_path(params.merge(format: 'pdf' ))

.row
  %table.table-striped.table-hover.ogma
    %thead
      %tr
        %th{width: '30%'}=sort_link(@search, :icno, (t 'campus.visitors.icno'))
        %th{width: '40%'}=sort_link(@search, :name, (t 'campus.visitors.name'))
        %th{width: '30%'}=sort_link(@search, :department, (t 'campus.visitors.department_organization'))
        
    %tbody
      = render "index_search"
      - @visitors.each do |visitor|
        %tr
          %td=link_to formatted_mykad(visitor.icno), campus_visitor_path(visitor)
          %td=visitor.visitor_with_title_rank
          %td=visitor.address_book_id.blank? ? visitor.department : visitor.address_book.name
     
  .right{style:"padding:0 30px; margin:0;"}= paginate @visitors, :theme => 'twitter-bootstrap-3'    