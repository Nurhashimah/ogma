- model_class = Bookingfacility
.bookingfacility-header
  %h1= (t 'campus.bookingfacilities.edit')
= render 'shared/flashes'

.row
  = form_for [:campus, @bookingfacility],  :html => { :class => 'form-horizontal' } do |f| 
    = render 'shared/error_messages', object: f.object
    = render :partial => 'form', :locals => {:f => f}

    .row
      .col-md-7.col-md-offset-3
        %br
        .form-group
          .col-md-1.col-md-offset-2
            = link_to content_tag(:i, "", :class => "fa fa-arrow-left ") + " " + t('.back', :default => t("helpers.links.back")), campus_bookingfacility_path, :class => 'btn btn-default'
          .col-md-2.col-md-offset-1
            = f.submit t('update'), class: "btn btn-primary"	 