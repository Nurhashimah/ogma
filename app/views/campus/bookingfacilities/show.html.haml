- model_class = Bookingfacility
.page-header
  %h1=(t 'campus.bookingfacilities.title')
= render 'shared/flashes'

.row
  .col-md-offset-1
    / Nav tabs
    %ul.nav.nav-tabs
      %li.active=link_to (t 'campus.bookingfacilities.details'), "#details", "data-toggle" => "tab"
      %li=link_to (t 'campus.bookingfacilities.approval'), "#approval", "data-toggle" => "tab"
      %li=link_to (t 'campus.bookingfacilities.approval2'), "#approval2", "data-toggle" => "tab"
      
    .tab-content{style:"padding-top:1em"}
      .col-md-8.col-md-offset-1
        %dl.dl-horizontal
          %dt=t 'campus.bookingfacilities.location_id'
          %dd=h @bookingfacility.booked_facility.location_list
    
          %dt=t 'campus.bookingfacilities.staff_id'
          %dd=h @bookingfacility.booking_staff.staff_with_rank

          %dt=t 'campus.bookingfacilities.request_date'
          %dd=h @bookingfacility.request_date.strftime('%d-%m-%Y')
      
      #details.tab-pane.active
        .col-md-8.col-md-offset-1
          = render 'tab_reservation'
       
      #approval.tab-pane
        .col-md-8.col-md-offset-1
          = render 'tab_approval'
      #approval2.tab-pane
        .col-md-8.col-md-offset-1
          = render 'tab_approval_facility'

.row
  .col-md-8.col-md-offset-1
    %hr
    .col-md-offset-2
      .form-actions
        = link_to content_tag(:i, "", :class => "fa fa-arrow-left ") + " " + t('.back', :default => t("helpers.links.back")), campus_bookingfacilities_path, :class => 'btn btn-default'
        = link_to content_tag(:i, "", class: "fa fa-file-pdf-o"), booking_facility_campus_bookingfacility_path(@bookingfacility, format: "pdf"), class: "btn btn-default", "data-toggle" => "tooltip", title: t('campus.bookingfacilities.title')
        = link_to content_tag(:i, "", :class => "fa fa-edit") + " " + t('.edit', :default => t("helpers.links.edit")), edit_campus_bookingfacility_path(@bookingfacility),  :class => 'btn btn-primary'
        = link_to content_tag(:i, "", :class => "fa fa-edit") + " " + t('.edit', :default => t("campus.bookingfacilities.approval")), approval_campus_bookingfacility_path(@bookingfacility),  :class => 'btn btn-primary'
        = link_to content_tag(:i, "", :class => "fa fa-edit") + " " + t('.edit', :default => t("campus.bookingfacilities.approval2")), approval_facility_campus_bookingfacility_path(@bookingfacility),  :class => 'btn btn-primary'
        = link_to content_tag(:i, "", :class => "fa fa-trash-o icon-white") + " " + t('.destroy', :default => t("helpers.links.destroy")), |
        campus_bookingfacility_path(@bookingfacility),                                                                                                    |
        :method => 'delete',                                                                                                           |
        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },                   |
        :class => 'btn btn-danger'
