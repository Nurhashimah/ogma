- model_class = Bookingfacility
.page-header
  %h1= t('campus.bookingfacilities.list')
  
.navbar.navbar-inverse{role: "navigation", style: "padding-right:40px;"}
  %ul.nav.navbar-nav
    - permitted_to? :create, :campus_bookingfacilities do
      %li= link_to content_tag(:li, fa_icon("asterisk", text: (t 'campus.bookingfacilities.new'))), new_campus_bookingfacility_path
  %ul.nav.navbar-nav.navbar-right
    %li= link_to content_tag(:li, fa_icon("search", text: (t 'actions.search'))), "#", class: "index_search_bar"
    %li= link_to content_tag(:li, fa_icon("print", text: (t 'actions.print'))), "#", class: 'bogus'

= render 'shared/flashes'

.row
  %table.table-striped.table-hover.ogma
    %thead
      %tr
        /%th{width: '10%'}=sort_link(@search, :position, (t 'campus.bookingfacilities.position'))
        /%th{width: '30%'}=sort_link(@search, :navlabel, (t 'campus.bookingfacilities.navlabel'))
        /%th{width: '30%'}=sort_link(@search, :name, (t 'campus.bookingfacilities.name'))
        /%th{width: '15%'}=(t 'campus.bookingfacilities.admin')
        /%th{width: '15%'}=(t 'campus.bookingfacilities.redirect')
        %th{width: '20%'}=(t 'campus.bookingfacilities.location_id')
        %th{width: '27%'}=(t 'campus.bookingfacilities.staff_id')
        %th{width: '10%'}=(t 'campus.bookingfacilities.request_date')
        %th{width: '23%'}=(t 'campus.bookingfacilities.start_date')+" - "+(t 'campus.bookingfacilities.end_date')
        %th{width: '8%'}=(t 'campus.bookingfacilities.approval')
        %th{width: '10%'}=(t 'campus.bookingfacilities.approval2')
        
    %tbody
      = render "index_search"
      - @bookingfacilities.each_with_index do |bfacility, count|
        %tr
          %td=link_to bfacility.booked_facility.location_list, campus_bookingfacility_path(bfacility)
          %td=bfacility.booking_staff.staff_with_rank
          %td=bfacility.request_date.strftime('%d-%m-%Y')
          %td=bfacility.reservation_dates
          %td=bfacility.approval==true ? fa_icon('check') : fa_icon('times')
          %td=bfacility.approval2==true ? fa_icon('check') : fa_icon('times')
     
  .right{style:"padding:0 30px; margin:0;"}= paginate @bookingfacilities, :theme => 'twitter-bootstrap-3'    