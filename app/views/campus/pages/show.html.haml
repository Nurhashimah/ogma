- model_class = Page
.page-header
  %h1=(t 'campus.pages.title')+" : "+@page.name
= render 'shared/flashes'

.row
  .col-md-offset-1
    / Nav tabs
    %ul.nav.nav-tabs
      %li=link_to (t 'campus.pages.details'), "#details", "data-toggle" => "tab"
      %li.active=link_to (t 'campus.pages.details2'), "#details2", "data-toggle" => "tab"
      
    .tab-content{style:"padding-top:1em"}
      .col-md-8.col-md-offset-1
        %dl.dl-horizontal
          = render 'tab_info'
       
      #details.tab-pane
        .col-md-8.col-md-offset-1
          %dl.dl-horizontal
            = render 'tab_info2'
            
      #details2.tab-pane.active
        .col-md-8.col-md-offset-1
          %dl.dl-horizontal
            %dt=t 'campus.pages.body'
            %dd{style: 'padding-left: 80px;'}
              = render 'tab_body'
            

.row
  .col-md-6.col-md-offset-3
    %hr
    .col-md-offset-2
      .form-actions
        = link_to content_tag(:i, "", :class => "fa fa-arrow-left ") + " " + t('.back', :default => t("helpers.links.back")), campus_pages_path, :class => 'btn btn-default'
        = link_to content_tag(:i, "", :class => "fa fa-edit") + " " + t('.edit', :default => t("helpers.links.edit")), edit_campus_page_path(@page),  :class => 'btn btn-primary'
        - if is_developer?
          = link_to content_tag(:i, "", :class => "fa fa-trash-o icon-white") + " " + t('.destroy', :default => t("helpers.links.destroy")), |
          campus_page_path(@page),                                                                                                    |
          :method => 'delete',                                                                                                           |
          :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },                   |
          :class => 'btn btn-danger'
