- model_class = Page
.page-header
  %h1=@page.title
= render 'shared/flashes'
- if current_user.userable.coemail.include?('teknikpadu.com')
  =link_to fa_icon("backward"), library_main_path, {title: (t 'library.main')}
.row
  .col-md-6.col-md-offset-3
    - permitted_to? :update, :campus_pages do
      .right.col-sm-2= link_to content_tag(:i, "", :class => "fa fa-edit") + " " + t('.edit', :default => t("helpers.links.edit")), edit_campus_page_path(@page), :class => 'btn btn-primary'
    = render 'tab_body'