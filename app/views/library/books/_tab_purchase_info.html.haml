.col-md-8.col-md-offset-1
  %dl.dl-horizontal
    %dt= t 'library.book.orderno'
    %dd=h @book.orderno 
          
    %dt= t 'library.book.purchaseprice' 
    %dd=h ringgols(@book.purchaseprice) 
          
    %dt= t 'library.book.purchasedate'
    %dd=h @book.purchasedate.try(:strftime, '%d %b %Y')
          
    %dt= t 'library.book.receiveddate' 
    %dd=h @book.receiveddate.try(:strftime, '%d %b %Y')
          
    %dt= t 'library.book.receiver_id' 
    %dd=h @book.receiver_id.blank? ? "" : @book.staff.name 
          
    %dt= t 'library.book.supplier_id' 
    %dd=h @book.supplier_id.blank? ? "" : @book.addbook.name  
