<% if [true, false].include?(@login.isstaff) %>
$("#warning").empty();
$("#usertype_span").empty();
$("#usertype_span").append('<%=j render("display_usertype") %>'); 
$("#delete_this").hide();
<% end %>
<% unless @login.deleted_at.blank? %>
$("#warning").empty();
$("#login_span").empty();
$("#login_span").append('<%=j render("display_deleted2") %>');
$("#ic_span").empty();
$("#ic_span").append('<%=j render("display_deleted1") %>');
$("#usertype_span").empty();
$("#usertype_span").append('<%=j "#{t('activerecord.attributes.login.deleted_at')} #{@login.deleted_at.strftime('%H:%M, %d/%m/%Y')}"%>')
$("#delete_this").hide();
<% end %>

