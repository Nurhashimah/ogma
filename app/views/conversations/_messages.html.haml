- @receipts.each do |receipt|
  - message = receipt.message
  .media
    .media-left
      / user avators can go here
      %a{:href => "#"}
        %img.media-object{:alt => "...", :src => "http://placehold.it/64x64"}
    .media-body
      %h4.media-heading
        =(t 'from')+" : "
        = message.sender.userable.name
        %br
        =(t 'to')+" : "
        - @receipts = conversation.receipts_for(current_user)
        - if @receipts.last.mailbox_type=="inbox"
          = @receipts.last.receiver.userable.name 
        - else
          = conversation.receipts_for(User.find(conversation.receipts.first.receiver_id)).first.receiver.userable.name
        /SINI LAK
          
        %br
          %small
            %b Subject:
            = message.subject
          %br
            %small
              %b Date:
              = message.created_at.strftime("%A, %b %d, %Y at %I:%M%p")
      = message.body
