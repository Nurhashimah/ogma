- model_class = Student
.page-header
  %h1
    = t 'edit'
    = @student.formatted_mykad

= render 'shared/flashes'

.row
  = form_for @student,  :html => { :class => 'form-horizontal' } do |f| 
    = render 'shared/error_messages', object: f.object
    .col-md-offset-1
      = render :partial => 'form', :locals => {:f => f}
      .form-group
        .col-sm-offset-5.col-sm-1
          = link_to content_tag(:i, "", :class => "fa fa-arrow-left ") + " " + t('.back', :default => t("helpers.links.back")), student_path(@student), :class => 'btn btn-default'
        .col-sm-2
          = f.submit t('update'), class: "btn btn-primary"
