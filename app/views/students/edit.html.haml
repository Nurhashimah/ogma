- model_class = Student
.page-header
  %h1
    = t 'edit'
    = @student.name

= render 'shared/flashes'

.row
  = form_for @student,  :html => { :class => 'form-horizontal' } do |f| 
    = render 'shared/error_messages', object: f.object
    = render :partial => 'form', :locals => {:f => f}
    .row
      .form-group
        .col-md-2.col-md-offset-3
          = link_to content_tag(:i, "", :class => "fa fa-arrow-left ") + " " + t('.back', :default => t("helpers.links.back")), student_path(@student), :class => 'btn btn-default'
        .col-md-2
          .div{style: "margin-left:-40px;"}
            = f.submit t('update'), class: "btn btn-primary"
