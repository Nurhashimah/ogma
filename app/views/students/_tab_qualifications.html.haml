- model_class = Student
.col-md-8.col-md-offset-2
  %dl.dl-horizontal
    %BR
  - for qualification in @student.qualifications
    %dt{:for => "level_id "}
      = h (DropDown::QUALIFICATION_LEVEL.find_all{|disp, value| value == qualification.level_id.to_i}).map {|disp, value| disp}[0]
      \:
    %dd
      = h qualification.try(:qname)
      \&nbsp &nbsp from &nbsp &nbsp #{h qualification.try(:institute)}
	
.col-md-8.col-md-offset-2	
  %BR	
  %dt SPM Results
  %BR
.col-md-2.col-md-offset-2
  - for spmresult in @student.spmresults
    = h spmresult.spm_subject
    %td -
    = h spmresult.grade
    %BR