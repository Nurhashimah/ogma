- model_class = Student
.page-header
  %h1= @student.formatted_mykad
= render 'shared/flashes'


.row
  .col-md-offset-1
    / Nav tabs
    %ul.nav.nav-tabs
      %li.active= link_to "Mandatory","#mandatory_edit", "data-toggle" => "tab"
      %li= link_to "Student Details","#student_details_edit", "data-toggle" => "tab"
      %li= link_to "Course Details", "#course_details_edit", "data-toggle" => "tab"

.row.fluid
  = form_for [:student, @student], url: student_path(@student), :html => { :class => 'form-horizontal' }  do |f| 
    = render 'shared/error_messages', object: f.object

    .tab-content{style:"padding-top:1em"}
      .col-md-8.col-md-offset-1
	  
	  		  
      #mandatory_edit.tab-pane.active
        %br
        = render 'tab_mandatory_edit'
      #student_details_edit.tab-pane
        %br
        = render 'tab_student_details_edit'
      #course_details_edit.tab-pane
        %br
        = render 'tab_course_details_edit'
				  		 
