        %td=t('student.students.stelno_must_not_blank')
      %tr
        %th 3E
        %th 
          sbirthdt
          %span{style: 'color: red'}*
        %th 5
        %th{style: 'background-color: yellow;'}
          Tarikh Lahir
          %span{style: 'color: red'}*
        %td=t('student.students.sbirthdt_must_use')
      %tr
        %th 3F
        %th semail
        %th 6
