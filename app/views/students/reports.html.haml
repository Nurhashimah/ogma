.page-header
  %h1 Pilihan Lapuraan Etnik

.row
  .col-md-4.col-md-offset-2
    - @programme_diploma_only = Programme.where('ancestry_depth=? AND course_type=?',0,'Diploma')
    = form_tag(action: :kumpulan_etnik, format: 'pdf') do
      = select_tag('programme', options_from_collection_for_select(@programme_diploma_only,:id, :programme_list), class: 'selectpicker', 'data-width'=>"75%")
      = submit_tag "Ethnic Listing by Programme", :name => :list_submit_button, :class => 'btn btn-primary'
