= search_form_for @search, url: bulletins_path,  class: "form-inline" do |f|
  %tr.search_row{:style => "display: none;"}
    %td= f.text_field :headline_cont, size: 2,  :class => "form-control"
    %td= f.text_field :content_cont, size: 8,  :class => "form-control"
    %td= f.text_field :staff_name_or_staff_icno_cont, size: 8,  :class => "form-control"
    %td.input-group
      = f.text_field :publishdt_eq, size: 8, :class => "form-control date_picker_reverse", value: @search.publishdt_eq.try(:strftime, '%d-%m-%Y')
      %span.input-group-btn
        %button.btn.btn-sm.btn-default.right{:type => "submit"}
          %i.fa.fa-search.fa-fw