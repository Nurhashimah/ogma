%td=h appointment.student.matrixno  
%td
  =link_to appointment.student.name, student_student_counseling_session_path(appointment)
  =h appointment.c_type == 'involuntary' ? image_tag("flag_red.png") : ""  
%td=h appointment.student.programme_for_student2 if appointment.student.course_id <15 
%td=h strip_tags(Student.year_and_sem(appointment.student.intake)) 
%td
  =h appointment.is_confirmed? ?  appointment.confirmed_at.try(:getlocal).try(:strftime, "%d %b %y, %l:%M %P") :  appointment.requested_at.try(:getlocal).try(:strftime,"%d %b %y, %l:%M %P")
  /=h appointment.is_confirmed? ?  l(appointment.confirmed_at+8.hours, format: "%d %b %y, %l:%M %P") : l(appointment.requested_at+8.hours, format: "%d %b %y, %l:%M %P")
%td=h appointment.duration
%td=h appointment.is_confirmed? ? image_tag("tick.png") : ""  
- if appointment.c_scope == "case" && !appointment.case_id.blank? 
  - if count==0   
    %td{:rowspan=>appointments.count, :style=>"text-align:center;"}
      /=h appointment.student_discipline_case.counselor_feedback.blank? ? (link_to image_tag("add.png", :border => 0, :title => 'Create new appointment') + (t 'student.counseling.add_session'), new_student_student_counseling_session_path(:caseid => appointment.case_id)) : image_tag("tick.png")  
      =h appointment.student_discipline_case.counselor_feedback.blank? ? (link_to t('student.counseling.add_session'), new_student_student_counseling_session_path(:caseid => appointment.case_id)) : ""
      = link_to t('student.counseling.display_feedback'), :action => 'feedback_referrer', :id => appointment.case_id if !appointment.student_discipline_case.counselor_feedback.blank?
    /- count+=1
- else
  %td{:style=>"text-align:center;"}= t 'student.counseling.not_related'

