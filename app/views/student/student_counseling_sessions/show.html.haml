- model_class = StudentCounselingSession
.page-header
  %h1=t 'student.student_counseling_session.title'
 
= render 'shared/flashes'

.row
  .col-md-offset-1
    / Nav tabs
    %ul.nav.nav-tabs
      %li.active= link_to (t 'student.student_counseling_session.appointment'),"#appointment", "data-toggle" => "tab"
      %li= link_to (t 'student.student_counseling_session.session_notes'),"#session_notes", "data-toggle" => "tab" if @student_counseling_session.is_confirmed?
      %li= link_to (t 'student.student_counseling_session.actions_referrer'),"#actions_referrer", "data-toggle" => "tab"  if @student_counseling_session.c_scope == "case" && !@student_counseling_session.case_id.blank?

    / display 
    .tab-content{style:"padding-top:1em"}
      .col-md-8.col-md-offset-1
        %dl.dl-horizontal
          %dt=t 'student.student_counseling_session.student_id'
          %dd
            =h @student_counseling_session.student.formatted_mykad_and_student_name 
            %font{:style=>"color: red;"}*

          %dt=t 'student.student_counseling_session.appointment_for'
          %dd=@student_counseling_session.requested_at.try(:strftime, "%d %b %y, %l:%M %P")
   
          %dt=t 'student.student_counseling_session.c_scope'
          %dd=@student_counseling_session.c_scope 
    
          %dt=t 'student.student_counseling_session.c_type'
          %dd=@student_counseling_session.c_type
        
      #appointment.tab-pane.active
        %br
        =render 'tab_appointment'   
      
      - if @student_counseling_session.is_confirmed?
        #session_notes.tab-pane
          %br
          =render 'tab_session_notes'
       
      - if @student_counseling_session.c_scope == "case" && !@student_counseling_session.case_id.blank?
        #actions_referrer.tab-pane
          %br
          =render 'tab_actions_referrer'

%br
.row
  .col-md-7.col-md-offset-2
    %hr
    .form-actions
      = link_to content_tag(:i, "", :class => "fa fa-arrow-left ") + " " + t('helpers.links.back'), student_student_counseling_sessions_path, :class => 'btn btn-default'
      = link_to content_tag(:i, "", :class => "fa fa-edit") + " " + t('helpers.links.edit'), edit_student_student_counseling_session_path(@student_counseling_session),  :class => 'btn btn-primary' 
      /= link_to content_tag(:i, "", :class => "fa fa-edit") + " " + t('helpers.links.finance_check'), check_staff_travel_claim_path(@travel_claim),  :class => 'btn btn-primary'
      /= link_to content_tag(:i, "", :class => "fa fa-edit") + " " + t('helpers.links.approve'), approve_staff_travel_claim_path(@travel_claim),  :class => 'btn btn-primary'
      = link_to content_tag(:i, "", :class => "fa fa-trash-o icon-white") + " " + t('helpers.links.destroy'), |
        student_student_counseling_session_path(@student_counseling_session),                                                                                                    |
        :method => 'delete',                                                                                                           |
        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },                   |
        :class => 'btn btn-danger'