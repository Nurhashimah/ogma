- provide(:title, 'Leave For Student')
- model_class = Leaveforstudent
.page-header
  %h1=t('student.leaveforstudent.new')
= render 'shared/flashes'
.row.fluid
  = form_for [:student, @leaveforstudent], html: { multipart: true, class: 'form-horizontal' }  do |f| 
    = f.hidden_field :college_id, value: current_user.college_id
    = render 'shared/error_messages', object: f.object
    = render :partial => "student/leaveforstudents/#{current_user.college.code}/form", :locals => {:f => f}

    .col-md-offset-1
      .form-group
        .col-sm-offset-2.col-sm-1
          = link_to content_tag(:i, "", :class => "fa fa-arrow-left ") + " " + t('.back', :default => t("helpers.links.back")), student_leaveforstudents_path, :class => 'btn btn-default'
        .col-sm-offset-1.col-sm-2
          = f.submit t('create'), class: "btn btn-primary"
