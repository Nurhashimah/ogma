- model_class = Leaveforstudent
.page-header
  %h1 Student Leave Request Details

= render 'shared/flashes'

%ul.nav.nav-tabs
  %li.active= link_to (t 'student.tleaveforstudent.leave_details'),"#applyshow", "data-toggle" => "tab"
  %li= link_to (t 'student.leaveforstudent.approve_leave'), "#approve_leave", "data-toggle" => "tab"
	  
.tab-content.col-md-offset-1
  %dl.dl-horizontal
    %dt 
    %dd
	 
  #applyshow.tab-pane.fade.in.active
    %br
      = render 'applyshow'
		  		  
  #approve_leave.tab-pane.fade
    %br
      = render 'approve_leave'
    