- model_class = Leaveforstudent
.page-header
  %h1 Student Leave Request Details

= render 'shared/flashes'

%ul.nav.nav-tabs
  %li.active= link_to (t 'leaveforstudent.leave details'),"#applyshow", "data-toggle" => "tab"
  %li= link_to (t 'leaveforstudent.approve leave'), "#approve_leave", "data-toggle" => "tab"
	  
.tab-content.col-md-offset-1
  %dl.dl-horizontal
    %dt 
    %dd
	 
  #applyshow.tab-pane.fade.in.active
    %br
      = render 'applyshow'
		  		  
  #approve_leave.tab-pane.fade
    %dl.dl-horizontal
      %dt= t 'leaveforstudent.Approve Student Leave:'
      %dd=h @leaveforstudent.approved? ? "Approved" : "Not Approved"
          
      %dt= t 'leaveforstudent.Approved By'
      %dd=h @leaveforstudent.approver_details
		  
      %dt= t 'leaveforstudent.Approved On'
      %dd=h @leaveforstudent.approvedate
		  
.row
  .col-md-4.col-md-offset-2
    %hr
    .form-actions
      = link_to content_tag(:i, "", :class => "fa fa-arrow-left ") + " " + t('.back', :default => t("helpers.links.back")), student_leaveforstudents_path, :class => 'btn btn-default'
      = link_to content_tag(:i, "", :class => "fa fa-edit") + " " + t('.edit', :default => t("helpers.links.edit")), edit_student_leaveforstudent_path(@leaveforstudent), :class => 'btn btn-primary'
      = link_to content_tag(:i, "", :class => "fa fa-trash-o icon-white") + " " + t('helpers.links.destroy'), |
        student_leaveforstudent_path(@leaveforstudent),                                                                                                    |
        :method => 'delete',                                                                                                           |
        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },                   |
        :class => 'btn btn-danger'
        