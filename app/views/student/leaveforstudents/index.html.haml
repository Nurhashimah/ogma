- model_class = Leaveforstudent
.page-header
  %h1= t('student.leaveforstudent.list')
  
.navbar.navbar-inverse{role: "navigation", style: "padding-right:40px;"}
  %ul.nav.navbar-nav
    %li= link_to content_tag(:li, fa_icon("asterisk", text: (t 'actions.new'))), new_student_leaveforstudent_path
  %ul.nav.navbar-nav.navbar-right
    %li= link_to content_tag(:li, fa_icon("search", text: (t 'actions.search'))), "#", class: "index_search_bar"
    %li= link_to content_tag(:li, fa_icon("print", text: (t 'actions.print'))), "#"
  
.row
  %table.table-striped.table-hover.ogma
    %thead
      %tr
        %th=t 'student.leaveforstudent.student_id'
        %th=t 'student.leaveforstudent.leavetype'
        %th=t 'student.leaveforstudent.requestdate'
        %th=t 'student.leaveforstudent.leaves_date'
        %th=t 'student.leaveforstudent.studentsubmit'
        %th=t 'student.leaveforstudent.coordinator'
        %th=t 'student.leaveforstudent.approved'
        %th=t 'student.leaveforstudent.warden'
        %th=t 'student.leaveforstudent.approved'
        /%th= sort_link(@search, :thumb_id, (t 'staff_attendance.thumb_id'))
    %tbody
    = render "index_search"
    - @leaveforstudent.each do |leaveforstudent|
      %tr
        %td= link_to leaveforstudent.student_details, student_leaveforstudent_path(leaveforstudent)
        %td=h ((DropDown::STUDENTLEAVETYPE.find_all{|disp, value| value ==leaveforstudent.leavetype }).map {|disp, value| disp}).first
        %td=h leaveforstudent.requestdate.try(:strftime, '%d %b %Y')
        %td=h leaveforstudent.leave_startdate.try(:strftime, '%d %b %Y')+" - "+ leaveforstudent.leave_enddate.try(:strftime, '%d %b %Y')
        %td=h leaveforstudent.studentsubmit? ? image_tag("tick.png") : image_tag("cross.png") 
        %td=h leaveforstudent.staff_id? ? leaveforstudent.approver_details : ""
        %td=h leaveforstudent.approved? ? image_tag("tick.png") : image_tag("cross.png") 
        %td=h leaveforstudent.staff_id2? ? leaveforstudent.approver_details2 : ""
        %td=h leaveforstudent.approved2? ? image_tag("tick.png") : image_tag("cross.png") 
        
