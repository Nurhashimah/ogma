- model_class = Leaveforstaff
.page-header
  %h1= t 'student.leaveforstudent.student_approve_leave_warden'
  
= render 'shared/flashes'

.row
  = form_for [:student, @leaveforstudent],  :html => { :class => 'form-horizontal' } do |f| 
    = render 'shared/error_messages', object: f.object
    
    .row
      .col-md-offset-1
        %ul.nav.nav-tabs
          %li.active= link_to (t 'student.leaveforstudent.approve_leave'), "#approve", "data-toggle" => "tab"

        .col-md-8.col-md-offset-1
          .form-group
            .col-sm-3.control-label
              = f.label t 'student.leaveforstudent.approve_student_leave'
            .col-md-7
              .form-inline
                .form-group
                  = t 'student.leaveforstudent.approve'
                  = f.radio_button :approved2, true
                .form-group
                  = t 'student.leaveforstudent.not_approve'
                  = f.radio_button :approved2, false
                  
          .form-group
            .col-sm-3.control-label
              = f.label t 'student.leaveforstudent.approved_by'
            .col-md-4
              = f.collection_select :staff_id2, Staff.joins(:positions).where('tasks_main ILIKE (?)',"%Warden%"), :id,  :staff_name_with_position, {:include_blank => t('helpers.prompt.select_staff')}, {class: 'selectpicker', "data-width"=>'300px'}
                    
          .form-group
            .col-sm-3.control-label
              = f.label t 'student.leaveforstudent.approvedate'
            .col-md-3
              = f.text_field :approvedate2, :order => [:day, :month, :year],  class: 'date_picker form-control'        
            
          .col-md-5.col-md-offset-1
            %BR
              .form-group
                .col-sm-offset-2.col-sm-2
                  = link_to content_tag(:i, "", :class => "fa fa-arrow-left ") + " " + t('.back', :default => t("helpers.links.back")), student_leaveforstudent_path(@leaveforstudent), :class => 'btn btn-default'
                .col-sm-offset-1.col-sm-4
                  = f.submit t('update'), class: "btn btn-primary"
            
            
                      
              

