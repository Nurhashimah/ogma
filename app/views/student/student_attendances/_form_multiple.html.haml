$(document).ready(function(){
  var checkbox =$("input:checkbox");
  var attend_check = document.getElementsByClassName('check'); 
  
  $('.check').each(function(){
    if ($(this).is(':checked')) {
      /*$(this).val() = "checked";*/
      $(this).checked=true;
    }

    for(i=0; i < checkbox.length; i++){
      if (attend_check[i].checked==true) 
      { 
        $('#span_select_'+i).hide();
        $('#span_reason_'+i).hide();
        $('#span_action_taken_'+i).hide();
        $('#span_action_close_'+i).hide();
        $('#span_remark_'+i).hide();
      }
    }

  });
  
  $('.check').click(function(){
    var attend_check_clk = document.getElementsByClassName('check'); 
    for(i=0; i < checkbox.length; i++){
      if (attend_check_clk[i].checked==true) 
      { 
        $('#span_select_'+i).hide();
        $('#span_reason_'+i).hide();
        $('#span_action_taken_'+i).hide();
        $('#span_action_close_'+i).hide();
        $('#span_remark_'+i).hide();
      }
      else
      {
        $('#span_select_'+i).show();
        $('#span_reason_'+i).show();
        $('#span_action_taken_'+i).show();
        $('#span_action_close_'+i).show();
        $('#span_remark_'+i).show();
      }
    }
   
  });

  $("input[id='check_all']").change(function() {  
    if($('#check_all').is(':checked')) { 
      for (var j=0; j<checkbox.length; j++) {
        var cc = document.getElementById('attends_'+j)
        cc.checked = true;
      }

    }else{
      for (var j=0; j<checkbox.length; j++) {
        var cc = document.getElementById('attends_'+j)
        cc.checked = false;
      }
    }
  });

  $("input[id='check_all']").each(function() {  
    if($('#check_all').is(':checked')) { 
      for (var j=0; j<checkbox.length; j++) {
        var cc = document.getElementById('attends_'+j)
        cc.checked = true;
      }
    }else{
      for (var j=0; j<checkbox.length; j++) {
        var cc = document.getElementById('attends_'+j)
        cc.checked = false;
      }
    }
  });
  
  /*var attend_check=document.getElementByClassName('check')*/

});

