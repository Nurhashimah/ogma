- model_class = StudentDisciplineCase
.page-header
  %h1= t('student.discipline.new')
  
= render 'shared/flashes'

.row.fluid
  = form_for [:student, @student_discipline_case], html: { class: 'form-horizontal' }  do |f| 
    = render 'shared/error_messages', object: f.object
    = hidden_field_tag :redirect_location, student_student_discipline_cases_path 
    
    = render :partial => 'form_start', :locals => {:f => f}        

    .col-md-offset-1
      .form-group
        .col-sm-offset-2.col-sm-1
          = link_to content_tag(:i, "", :class => "fa fa-arrow-left ") + " " + t('.back', :default => t("helpers.links.back")), student_student_discipline_cases_path, :class => 'btn btn-default'
        .col-sm-offset-1.col-sm-2
          = f.submit t('create'), class: "btn btn-primary"
