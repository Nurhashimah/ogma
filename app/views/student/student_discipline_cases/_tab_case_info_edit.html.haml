.col-md-offset-2   
  .form-group
    .col-sm-2.control-label
      = f.label t 'student.discipline.case_created_on', for: :case_created_on
    .col-md-2
      = f.text_field :case_created_on, class: 'date_picker_reverse form-control mandatory', value: @student_discipline_case.case_created_on.try(:strftime, '%d-%m-%Y')
  .form-group
    .col-sm-2.control-label
      = f.label  t 'student.discipline.file_id', for: :file_id
    .col-md-5
      = f.collection_select :file_id, Cofile.all, :id, :file_no_and_name, {:prompt => t('select')}, {class: 'selectpicker', "data-width"=>'460px'}
  .form-group
    .col-sm-2.control-label
      = f.label  t 'student.discipline.investigation_notes', for: :investigation_notes
    .col-md-5
      = f.text_area :investigation_notes, :size => "60x5", class: 'mandatory'
  .form-group
    .col-sm-2.control-label
      = f.label  t 'student.discipline.action_type', for: :action_type
    - if @student_discipline_case.college.code=='amsas'
      .col-md-1= f.radio_button :action_type, "no_case", :id => 'nc', :class => 'radio_action_type'
      .col-md-1=t('student.discipline.no_case')
      .col-md-1= f.radio_button :action_type, "Ref Mentor", :id => 'mn', :class => 'radio_action_type'
      .col-md-2=t('student.discipline.refer_mentor')
      .col-md-1= f.radio_button :action_type, "Ref Counselor", :id => 'cn', :class => 'radio_action_type'
      .col-md-2=t('student.discipline.refer_counselor')
    - else
      .col-md-1= f.radio_button :action_type, "no_case", :id => 'nc', :class => 'radio_action_type'
      .col-md-1=t('student.discipline.no_case')
      .col-md-1= f.radio_button :action_type, "advise", :id => 'ja', :class => 'radio_action_type' 
      .col-md-1=t('student.discipline.advise')
      .col-md-1= f.radio_button :action_type, "Ref TPHEP",	:id => 'au', :class => 'radio_action_type'
      .col-md-2=t('student.discipline.refer_tphep')

  .form-group#nc_item{style: "display: none;"}
    .col-sm-2.control-label
      = f.label  t 'student.discipline.closed_at_college_on', for: :closed_at_college_on
    .col-md-2
      = f.text_field :closed_at_college_on, class: 'date_picker_reverse form-control mandatory', value: @student_discipline_case.closed_at_college_on.try(:strftime, '%d-%m-%Y')

  .form-group#ja_item{style: "display: none;"}
    .col-sm-2.control-label
      = f.label  t 'student.discipline.other_info', for: :other_info
    .col-md-5
      = f.text_area :other_info, :size => "40x5", class: 'mandatory'

  - if current_user.college.code=="kskbjb"
    - myhod = Position.where(id: 3).first.staff_id
  - else
    - counselor=Position.where('unit ILIKE(?)', '%Kaunseling%').pluck(:staff_id)
    - mentor=Staff.joins(:mentor).pluck(:id)

  .form-group#au_item{style: "display: none;"}
    .col-sm-2.control-label
      = f.label  t 'student.discipline.assigned2_to', for: :assigned2_to
    .col-md-5
      = f.collection_select :assigned2_to, Staff.where('id IN (?)', myhod).order(rank_id: :asc, name: :asc), :id, :staff_with_rank, {:prompt => t('select')}, {class: 'selectpicker', "data-width"=>'460px'}
