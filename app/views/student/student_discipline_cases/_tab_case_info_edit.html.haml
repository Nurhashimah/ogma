  .form-group#mn_item{style: "display: none;"}
    .col-sm-2.control-label
      = f.label  t 'student.discipline.assigned2_to_mentor', for: :assigned2_to
    .col-md-5
      = f.collection_select :assigned2_to, Staff.where('id IN (?)', mentor).order(rank_id: :asc, name: :asc), :id, :staff_with_rank_unit, {}, {class: 'selectpicker mandatory', "data-width"=>'460px'}
        
  .form-group#cn_item{style: "display: none;"}
    .col-sm-2.control-label
      = f.label  t 'student.discipline.assigned2_to_counselor', for: :assigned2_to
    .col-md-5
      = f.collection_select :assigned2_to, Staff.where('id IN (?)', counselor).order(rank_id: :asc, name: :asc), :id, :staff_with_rank_unit, {}, {class: 'selectpicker mandatory', "data-width"=>'460px'}
  
  .form-group#assign_date{style: "display: none;"}
    .col-sm-2.control-label
      = f.label  t 'student.discipline.assigned2_on', for: :assigned2_to_date
    .col-md-2
      = f.text_field :assigned2_on, class: 'date_picker_reverse form-control mandatory', value: @student_discipline_case.assigned2_on.try(:strftime, '%d-%m-%Y')
      
 
