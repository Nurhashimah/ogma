      $("#tr_description").hide("");
    }
  });

  $("#student_discipline_case_infraction_id").each(function() {  
    if($("#student_discipline_case_infraction_id").val() == '4') { 
      $("#tr_description").show("slide"); 
    }else{
      $("#tr_description").hide("");
    }
  });

});

