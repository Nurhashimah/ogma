.row
 .col-md-6.col-md-offset-2
  .panel.panel-info
   .panel-body
    .row
     .col-md-12
      %h1=(t 'activerecord.attributes.user.reset_password2')
      
      = form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f| 
       = devise_error_messages!
       = f.hidden_field :reset_password_token

       .form-group
        .col-md-3.col-md-offset-1.control-label
         = f.label :password
        .col-md-5
         = f.password_field :password, autofocus: true, autocomplete: "off", class: 'form-control'

       .form-group
        .col-md-3.col-md-offset-1.control-label
         = f.label :password_confirmation
        .col-md-5
         = f.password_field :password_confirmation, autofocus: true, autocomplete: "off", class: 'form-control'
         %br

       .col-md-5.col-md-offset-4
        = f.submit (t 'activerecord.attributes.user.change_my_password'), class: "btn btn-primary"
    
    .row
     .col-md-3
      %br
      = render "devise/shared/links"
      
      
