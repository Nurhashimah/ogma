- model_class = Location
.page-header
  %h1= t('location.title')#, :default => model_class.model_name.human.pluralize
  
.navbar.navbar-inverse{role: "navigation", style: "padding-right:40px;"}
  %ul.nav.navbar-nav
    %li= link_to content_tag(:li, fa_icon("asterisk", text: (t 'actions.new'))), '#'
  %ul.nav.navbar-nav.navbar-right
    %li.toga= link_to content_tag(:li, fa_icon("search", text: (t 'actions.search'))), "#", class: "toga"
    %li= link_to content_tag(:li, fa_icon("print", text: (t 'actions.print'))), "#"
      
.row.filter{style: "display:none;"}

.row
  - @root_locations.each do |location|
    .building 
      %h5= link_to location.name, location
  .building 
    = link_to "ADD", '#'
