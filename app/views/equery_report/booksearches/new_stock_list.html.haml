- model_class = Booksearch
.page-header
  %h1=t('equery.book.search')

= render 'shared/flashes'

.row.fluid
  = form_for [:equery_report, @booksearch], html: { multipart: true, class: 'form-horizontal' }  do |f| 
    = render 'shared/error_messages', object: f.object
    = render :partial => 'form_stock_list', :locals => {:f => f}
    = f.hidden_field :college_id, value: current_user.college_id

    .col-sm-8.col-md-offset-1
      .row
        .col-sm-offset-3
          .small=t('equery.leaves_all_blank_all_records')
          %hr
        .form-group
          .col-sm-offset-4.col-sm-1
            = link_to content_tag(:i, "", :class => "fa fa-arrow-left ") + " " + t('.back', :default => t("helpers.links.back")), "/equery_reports/library", :class => 'btn btn-default'
          .col-sm-offset-1.col-sm-2
            = f.submit (t 'search') , class: "btn btn-primary"
