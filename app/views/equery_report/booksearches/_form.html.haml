.row
  .col-md-10.col-md-offset-1
    = f.hidden_field :stock_summary, :value=> 1
      
    / Nav tabs
    %ul.nav.nav-tabs
      %li.active= link_to (t 'library.book.list'),"#search", "data-toggle" => "tab"

    .tab-content{style:"padding-top:1em"}
      #search.tab-pane.active
        %br
        .col-md-offset-2
          =(t 'equery.search_by')
          .form-group
            .col-sm-2.control-label
              %b= (t 'library.book.accessionno')+" - "+(t 'library.book.title')
            .col-md-6
              /= f.text_field :title, class: 'form-control', data: {autocomplete_source: Book.order(title: :asc).pluck(:title)}
              /Accession.order(:accession_no).map(&:acc_book)
              =f.text_field :accessionno, class: 'form-control', data: {autocomplete_source: Accession.joins(:book).map(&:acc_book)}, placeholder:  (t 'library.book.accessionno')+" #{t('or')} "+(t 'library.book.title')
          .form-group
            .col-sm-2.control-label
              = f.label (t 'library.book.author')
            .col-md-4
              = f.text_field :author, class: 'form-control', data: {autocomplete_source: Book.order(title: :asc).pluck(:author).uniq}
          .form-group
            .col-sm-2.control-label
              %b ISBN
            .col-md-4
              = f.text_field :isbn, class: 'form-control', data: {autocomplete_source: Book.order(title: :asc).pluck(:isbn)}
          .form-group
            .col-sm-2.control-label
              = f.label (t 'library.book.publisher')
            .col-md-4
              = f.text_field :publisher, class: 'form-control', data: {autocomplete_source: Book.order(title: :asc).pluck(:publisher).uniq}
