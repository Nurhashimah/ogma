.row
  .col-md-10.col-md-offset-1
    - if @searchbooktype=='1' || @searchbooktype==1 
      = hidden_field_tag :method, 1 
      = f.hidden_field :stock_summary, :value=> 1
      
      / Nav tabs
      %ul.nav.nav-tabs
        %li.active= link_to (t 'library.book.list'),"#search", "data-toggle" => "tab"

      .tab-content{style:"padding-top:1em"}
        #search.tab-pane.active
          %br
          .col-md-offset-2
            =(t 'equery.search_by')
            .form-group
              .col-sm-2.control-label
                = f.label (t 'library.book.title') 
              .col-md-4
                = f.text_field :title, class: 'form-control'
            .form-group
              .col-sm-2.control-label
                = f.label (t 'library.book.author')
              .col-md-4
                = f.text_field :author, class: 'form-control'
            .form-group
              .col-sm-2.control-label
                %b ISBN
              .col-md-4
                = f.text_field :isbn, class: 'form-control'
            .form-group
              .col-sm-2.control-label
                = f.label (t 'library.book.accessionno')
              .col-md-4
                = f.text_field :accessionno, class: 'form-control'
            .form-group
              .col-sm-2.control-label
                = f.label (t 'library.book.publisher')
              .col-md-4
                = f.text_field :publisher, class: 'form-control'
               
    - elsif @searchbooktype=='2' || @searchbooktype==2 
      = hidden_field_tag :method,  2 
      =f.hidden_field :stock_summary, :value=> 2

      / Nav tabs
      %ul.nav.nav-tabs
        %li.active= link_to (t 'library.book.stock_listing'),"#search", "data-toggle" => "tab"

      .tab-content{style:"padding-top:1em"}
        #search.tab-pane.active
          %br
          .col-md-offset-2
            =(t 'equery.search_by')
            .form-group
              .col-sm-2.control-label
                =f.label (t 'library.book.classno')
              .col-md-4
                = f.text_field :classno, class: 'form-control'

            .form-group
              .col-sm-2.control-label
                = f.label (t 'library.book.accessionno')
              .col-md-4
                .input-group
                  = f.text_field :accessionno_start, :size=>10, class: 'form-control'
                  .input-group-addon=t('to')
                  = f.text_field :accessionno_end, :size=>10, class: 'form-control'
                  
    - elsif @searchbooktype=='3' || @searchbooktype==3
      = hidden_field_tag :method,  3 
      =f.hidden_field :stock_summary, :value=> 3

      / Nav tabs
      %ul.nav.nav-tabs
        %li.active= link_to (t 'library.book.book_summary'), "#search", "data-toggle" => "tab"

      .tab-content{style:"padding-top:1em"}
        #search.tab-pane.active
          %br
          .col-md-offset-2
            =(t 'equery.search_by')
            .form-group
              .col-sm-2.control-label
                =f.label (t 'library.book.classno')
              .col-md-4
                = f.text_field :classno, class: 'form-control'
            .form-group
              .col-sm-2.control-label
                = f.label (t 'library.book.accessionno') 
              .col-md-4
                .input-group
                  = f.text_field :accessionno_start, :size=>10, class: 'form-control'
                  .input-group-addon=t('to')
                  = f.text_field :accessionno_end, :size=>10, class: 'form-control'
