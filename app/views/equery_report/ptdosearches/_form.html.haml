.row
  .col-md-10.col-md-offset-1
    / Nav tabs
    %ul.nav.nav-tabs
      %li.active= link_to (t 'equery.search_by'),"#search", "data-toggle" => "tab"

    .tab-content{style:"padding-top:1em"}
      #search.tab-pane.active
        %br
        /= f.hidden_field :attended_courses, value: 1 
        /NOTE - refer auth rules, capture position id instead
        - if current_user.userable.positions.count > 0
          = f.hidden_field :searchby_post_id, value: current_user.userable.positions.first.id
        .col-md-offset-2
          .form-group
            .col-sm-2.control-label
              = f.label (t 'equery.ptdo.staff')
            .col-md-5
              = f.text_field :staff_name, class: 'form-control', data: {autocomplete_source: Staff.where(id: Ptdo.pluck(:staff_id)).order(:name).map(&:mykad_with_staff_name)}, placeholder: (t 'staff.name')+" "+(t 'or')+" "+(t 'equery.ptdo.icno')
          .form-group
            .col-sm-2.control-label
              = f.label  (t 'equery.ptdo.schedule_date')
            .col-md-4
              .input-group
                = f.text_field :schedulestart_start, class: 'form-control date_picker_reverse'
                .input-group-addon=t('to')
                = f.text_field :schedulestart_end, class: 'form-control date_picker_reverse'
