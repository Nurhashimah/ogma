/=@staffattendancesearch.staffattendances.count
- model_class = Staffattendancesearch
.page-header
  %h1=t('equery.staffattendance.search')
= render 'shared/flashes'

.row
  .col-md-offset-1
    / Nav tabs
    %ul.nav.nav-tabs
      %li.active= link_to (t 'equery.search_result'),"#search", "data-toggle" => "tab"

    / display 
    .tab-content{style:"padding-top:1em"}
      #search_details.tab-pane.active  
            
        /additional heading
        .col-md-8.col-md-offset-2
          %dl.dl-horizontal
            - unless @staffattendancesearch.department.blank?
              %dt=(t 'equery.staffattendance.department')
              %dd=@staffattendancesearch.department
              
            - unless @staffattendancesearch.thumb_id.blank?
              %dt=(t 'equery.staffattendance.staff')
              %dd=Staff.find_by_thumb_id(@staffattendancesearch.thumb_id).staff_with_rank
            
            - unless @staffattendancesearch.logged_at.blank?
              %dt=(t 'equery.staffattendance.logged_at')
              %dd=@staffattendancesearch.logged_at.strftime("%B %Y")
           
            %dt=(t'equery.staffattendance.total')
            %dd=@staffattendancesearch.staffattendances.count

        /display result
        .col-md-8.col-md-offset-1
          %br
          =render partial: 'display_punchcard', locals: {staffattendancesearch: @staffattendancesearch,staffattendances: @staffattendancesearch.staffattendances}
 
.row
  .col-md-6.col-md-offset-3
    %hr
    .form-actions
      = link_to content_tag(:i, "", :class => "fa fa-arrow-left") +" #{t('equery.title')} - #{t('staff.title')}", "/equery_reports?query_module=1", class: 'btn btn-primary'
      %span{style: 'padding-left: 20px;'}= link_to content_tag(:i, "", :class => "fa fa-arrow-left ") + " " + t('.back', :default => t("helpers.links.back")), new_equery_report_staffattendancesearch_path,  :class => 'btn btn-default'
      
