.row
  .col-md-10.col-md-offset-2
    - if @searchexamresulttype=='1' || @searchexamresulttype==1      
      /:intake_id, :subject_id, :student_id, :semester, :examdts, :examdte  
    
      / Nav tabs
      %ul.nav.nav-tabs
        %li.active= link_to (t 'equery.search_by'),"#search", "data-toggle" => "tab"

      .tab-content{style:"padding-top:1em"}
        #search.tab-pane.active
          %br
          .col-md-offset-2
            .form-group
              .col-sm-2.control-label
                = f.label (t 'equery.examresult.intake_id') 
              .col-md-5
                /= f.collection_select :intake_id, Intake.all, :id, :siri_programmelist, {include_blank: (t 'select')}, {class: 'selectpicker', "data-width" => "auto"} 
                = f.text_field :intake_programme, class: 'form-control', data: {autocomplete_source: Intake.all.map(&:siri_programmelist)}, placeholder: "Siri #{(t 'or')} #{(t 'equery.weeklytimetable.programme')}"
                
            .form-group
              .col-sm-2.control-label
                = f.label  (t 'equery.examresult.exam_date')
              .col-md-5
                .input-group
                  .input-group-addon=t('equery.examresult.start')
                  = f.text_field :examdts, class: 'form-control date_picker_reverse'
                  .input-group-addon=t('equery.examresult.end')
                  = f.text_field :examdte, class: 'form-control date_picker_reverse'
            
            .form-group
              .col-sm-2.control-label
              .col-md-5
                .col-md-1= f.check_box :student_id,:checked=>"unchecked", :id=> 'student_checker' 
                .col-md-11="#{t('equery.tick')} #{t('equery.to_includes')} <b>#{t('equery.examresult.exam_slip')}</b> #{t('equery.in_search_results')}".html_safe