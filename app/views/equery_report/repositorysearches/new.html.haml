- model_class = Repositorysearch
.page-header
  %h1=(t 'equery.repository.search')

= render 'shared/flashes'

.row.fluid
  = form_for [:equery_report, @repositorysearch], html: { multipart: true, class: 'form-horizontal' }  do |f| 
    = render 'shared/error_messages', object: f.object
    = f.hidden_field :college_id, value: current_user.college_id
    
    = f.hidden_field :repotype, value: '1'
    = render partial: "equery_report/repositorysearches/iso/form", locals: {f: f}
 
    .col-sm-8.col-md-offset-1
      .row
        .col-sm-offset-3
          .small="* "+t('equery.leaves_all_blank_all_records')
        %br
        .form-group
          .col-sm-offset-5.col-sm-1
            = link_to content_tag(:i, "", :class => "fa fa-arrow-left ") + " " + t('.back', :default => t("equery.title")), "/equery_reports/repository", :class => 'btn btn-default'
          .col-sm-2.col-sm-offset-2= f.submit (t 'search') , class: "btn btn-primary"
            
 
