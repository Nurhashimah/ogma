- model_class = Stationerysearch
.page-header
  %h1=t('equery.stationery.search')
= render 'shared/flashes'

.row
  .col-md-offset-1
    =render partial: 'stationery_listing', locals: {stationerysearch: @stationerysearch, stationeries: @stationeries}

.row
  .col-md-6.col-md-offset-3
    %hr
    .form-actions
      /= link_to content_tag(:i, "", :class => "fa fa-arrow-left") +" #{t('equery.title')} - #{t('stationery.title')}", "/equery_reports?query_module=2", class: 'btn btn-primary'
      = link_to content_tag(:i, "", :class => "fa fa-arrow-left") +" #{t('equery.title')} - #{t('stationery.title')}", "/equery_reports/assets", class: 'btn btn-primary'
      %span{style: 'padding-left: 20px;'}= link_to content_tag(:i, "", :class => "fa fa-arrow-left ") + " " + t('.back', :default => t("helpers.links.back")), new_equery_report_stationerysearch_path(searchstationerytype: 1),  :class => 'btn btn-default'
      
