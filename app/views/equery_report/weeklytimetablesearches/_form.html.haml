.row
  .col-md-10.col-md-offset-2
    - if @searchweeklytimetabletype=='1' || @searchweeklytimetabletype==1      
      /:programme_id, :startdate, :enddate, :preparedby, :intake_id, :intake, :validintake
      
      / Nav tabs
      %ul.nav.nav-tabs
        %li.active= link_to (t 'equery.search_by'),"#search", "data-toggle" => "tab"

      .tab-content{style:"padding-top:1em"}
        #search.tab-pane.active
          %br
          .col-md-offset-2
            .form-group
              .col-sm-2.control-label
                = f.label (t 'equery.weeklytimetable.intake_programme') 
              .col-md-5
                - if current_user.college.code=='amsas'
                  - intake_list=Intake.all.map(&:siri_programmelist)
                  - select_placeholder= "Siri #{(t 'or')} #{(t 'equery.weeklytimetable.programme')}"
                - else
                  - intake_list=Intake.all.map(&:programmelist_group_intake)
                  - select_placeholder="#{(t 'equery.weeklytimetable.intake')} #{(t 'or')} #{(t 'equery.weeklytimetable.programme')}"
                
                = f.text_field :intake_programme, class: 'form-control', data: {autocomplete_source: intake_list}, placeholder: select_placeholder

            .form-group
              .col-sm-2.control-label.intake_label
                = f.label (t 'equery.weeklytimetable.preparedby') 
              .col-md-4
                =f.select :preparedby, grouped_options_for_select(Weeklytimetable.lecturer_per_intake(current_user.college.code)), {:include_blank => (t 'select')}, {:class => 'form-control'}
           
            .form-group
              .col-sm-2.control-label
                = f.label  (t 'equery.weeklytimetable.startdate')
              .col-md-4
                .input-group
                  /startdate& enddate - used for WT 'start_date' range
                  = f.text_field :startdate, class: 'form-control date_picker_reverse'
                  .input-group-addon=t('to')
                  = f.text_field :enddate, class: 'form-control date_picker_reverse'