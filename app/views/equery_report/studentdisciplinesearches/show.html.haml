- model_class = Studentdisciplinesearch
.page-header
  %h1=t('equery.student_discipline.search')
= render 'shared/flashes'

.row
  .col-md-offset-1
    =render partial: 'sdiscipline_listing', locals: {studentdisciplinesearch: @studentdisciplinesearch, studentdisciplines: @studentdisciplines}

.row
  .col-md-6.col-md-offset-4
    %hr
    .form-actions
      = link_to content_tag(:i, "", :class => "fa fa-arrow-left") +" #{t('equery.title')} - #{t('student.title')}", "/equery_reports/student", class: 'btn btn-primary'
      %span{style: 'padding-left: 20px;'}= link_to content_tag(:i, "", :class => "fa fa-arrow-left ") + " " + t('.back', :default => t("helpers.links.back")), new_equery_report_studentdisciplinesearch_path(searchstudentdisciplinetype: 1),  :class => 'btn btn-default'
      
