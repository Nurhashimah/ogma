.row
  .col-md-10.col-md-offset-1
    %br
    / Nav tabs
    %ul.nav.nav-tabs
      %li.active= link_to (t 'equery.search_by'),"#search", "data-toggle" => "tab"

    .tab-content{style:"padding-top:1em"}
      #search.tab-pane.active
        /.col-md-offset-1
        %br
          
        .form-group
          .col-md-5.control-label
            =f.label  (t 'asset.loss.writeoff_approval_letter')
          .col-md-7
            = f.collection_select :loss_cert, Document.where(id: AssetLoss.pluck(:document_id)), :id, :doc_details, {include_blank: (t 'select')}, {class: 'selectpicker', "data-width" => "auto"}