.row
  .col-md-10.col-md-offset-1
    - if @searchdoctype=='1' || @searchdoctype==1
      = f.hidden_field :method, value: @searchdoctype
      
      / Nav tabs
      %ul.nav.nav-tabs
        %li.active= link_to (t 'equery.search_by'),"#search", "data-toggle" => "tab"

      .tab-content{style:"padding-top:1em"}
        #search.tab-pane.active
          %br
          .col-md-offset-2
            .form-group
              /.col-sm-2.control-label
              /  %b= (t 'library.book.accessionno')+" - "+(t 'library.book.title')
              /.col-md-6
              /  /=f.text_field :accessionno, class: 'form-control', data: {autocomplete_source: Accession.joins(:book).map(&:acc_book)}, placeholder:  (t 'library.book.accessionno')+" #{t('or')} "+(t 'library.book.title')
              .col-sm-2.control-label
                = f.label (t 'document.ref_no') 
              .col-md-4
                = f.text_field :refno, class: 'form-control'
            .form-group
              .col-sm-2.control-label
                = f.label (t 'document.title2') 
              .col-md-4
                = f.text_field :title, class: 'form-control'
            .form-group
              .col-sm-2.control-label
                = f.label (t 'document.from') 
              .col-md-4
                = f.text_field :sender, class: 'form-control'
            .form-group
              .col-sm-2.control-label
                = f.label (t 'equery.document.file_reference') 
              .col-md-4
                = f.collection_select :file_id, Cofile.where(id: Document.all.map(&:file_id)).order(cofileno: :asc), :id, :file_no_and_name, {include_blank: (t 'select')}, {class: 'selectpicker'}
            .form-group
              .col-sm-2.control-label
                = f.label (t 'document.letterdt')
              .col-md-4
                /= date_select :letterdt, params[:letterdt], :include_blank => true 
                /= date_select :letterdtend, params[:letterdtend], :include_blank => true
                .input-group
                  = f.text_field :letterdt, class: 'datepicker_reverse form-control'
                  .input-group-addon=(t 'to')
                  = f.text_field :letterdtend, class: 'datepicker_reverse form-control'
            .form-group
              .col-sm-2.control-label
                = f.label (t 'equery.document.letterxdt')
              .col-md-4
                /= date_select :letterxdt, params[:letterxdt], :include_blank => true
                /= date_select :letterxdtend, params[:letterxdtend], :include_blank => true 
                .input-group
                  = f.text_field :letterxdt, class: 'datepicker_reverse form-control'
                  .input-group-addon=(t 'to')
                  = f.text_field :letterxdtend, class: 'datepicker_reverse form-control'

            .form-group
              .col-sm-2.control-label
                = f.label (t 'document.category')
              .col-md-4
                = f.select :category, DropDown::DOCUMENT_CATEGORY,{:include_blank => (t 'select')},{class: 'selectpicker'}
           
            .form-group
              .col-sm-2.control-label
                = f.label (t 'equery.document.list_all_documents')
              .col-md-5.small
                .checkbox
                  %label
                    /= f.check_box :from,:checked=>"checked",:class => 'all_records', :id=> 'all_checker'
                    = f.check_box :from,:checked=>"unchecked",:class => 'all_records', :id=> 'all_checker'
                    ="<b>#{(t 'equery.tick')}</b> #{(t 'equery.leaves_other_blanks')} <b>#{(t 'equery.untick')}</b> #{(t 'equery.document.select_by_status')}".html_safe
            
            .form-group.closed_item
              /{style: "display: none;"}
              .col-sm-2.control-label
                =f.label (t 'document.file_closed')+"( status)"
              .col-md-4
                =f.select :closed, options_for_select([[(t 'equery.document.closed'), 'Yes'], [(t 'equery.document.open'), 'No']]),{:include_blank => (t 'select')},{class: 'selectpicker'}
         
:javascript

  $("input[class='all_records']").change(function() {  
    if($('#all_checker').is(':checked')) 
    { $(".closed_item").hide(); }
    else
    { $(".closed_item").show(); }
  });
  
  $("input[class='all_records']").each(function() {  
    if($('#all_checker').is(':checked')) 
    { $(".closed_item").hide(); }
    else
    { $(".closed_item").show(); }
  });
  
  
