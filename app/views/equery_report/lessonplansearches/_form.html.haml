.row
  .col-md-10.col-md-offset-2
    /:lecturer, :intake_id, :programme_id, :intake, :valid_schedule, :subject, :loggedin_staff,
      
    / Nav tabs
    %ul.nav.nav-tabs
      %li.active= link_to (t 'equery.search_by'),"#search", "data-toggle" => "tab"

    .tab-content{style:"padding-top:1em"}
      #search.tab-pane.active
        %br
        .col-md-offset-2
          .form-group
            .col-sm-2.control-label
              = f.label (t 'equery.lesson_plan.intake') 
            .col-md-5
              - if current_user.college.code=='amsas'
                - intake_list=Intake.all.map(&:siri_programmelist)
                - select_placeholder= "Siri #{(t 'or')} #{(t 'equery.weeklytimetable.programme')}"
              - else
                - intake_list=Intake.all.map(&:programmelist_group_intake)
                - select_placeholder="#{(t 'equery.lesson_plan.intake')} #{(t 'or')} #{(t 'equery.lesson_plan.programme')}"
                
              = f.text_field :intake_programme, class: 'form-control', data: {autocomplete_source: intake_list}, placeholder: select_placeholder

          .form-group
            .col-sm-2.control-label
              = f.label (t 'equery.lesson_plan.lecturer') 
            .col-md-4
              =f.select :lecturer, grouped_options_for_select(LessonPlan.lecturer_per_intake(current_user.college.code)), {:include_blank => (t 'select')}, {:class => 'form-control'}
                
          .form-group
            .col-sm-2.control-label
              = f.label (t 'equery.lesson_plan.subject')
            .col-md-4
              - subject_list=[]
              - LessonPlan.all.group_by{|x|x.lecturer}.each do |lecturer_id, lps|
                - a=[[(t 'select'), ""]]
                - for lp in lps
                  - a << [lp.schedule_item.weeklytimetable_subject.subject_list, lp.schedule_item.subject]
                - subject_list << [lecturer_id, a]
              =f.select :subject, grouped_options_for_select(subject_list), {:include_blank => (t 'select')}, {:class => 'form-control'}