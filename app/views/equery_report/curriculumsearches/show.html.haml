- model_class = Curriculumsearch
.page-header
  %h1=t('equery.curriculum.search')
= render 'shared/flashes'

.row
  .col-md-offset-1
    =render partial: 'curriculum_listing', locals: {curriculumsearch: @curriculumsearch, curriculums: @curriculums}

.row
  .col-md-6.col-md-offset-4
    %hr
    .form-actions
      = link_to content_tag(:i, "", :class => "fa fa-arrow-left") +" #{t('equery.title')} - #{t('training.title')}", "/equery_reports?query_module=5", class: 'btn btn-primary'
      %span{style: 'padding-left: 20px;'}= link_to content_tag(:i, "", :class => "fa fa-arrow-left ") + " " + t('.back', :default => t("helpers.links.back")), new_equery_report_curriculumsearch_path(searchcurriculumtype: 1),  :class => 'btn btn-default'
      
