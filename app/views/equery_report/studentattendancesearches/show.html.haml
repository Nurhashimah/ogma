- model_class = Studentattendancesearch
.page-header
  %h1=t('equery.student_attendance.search')
= render 'shared/flashes'

.row
  .col-md-offset-1
    =render partial: 'attendance_listing', locals: {studentattendancesearch: @studentattendancesearch, studentattendances: @studentattendances}

.row
  .col-md-6.col-md-offset-3
    %hr
    .form-actions
      = link_to content_tag(:i, "", :class => "fa fa-arrow-left") +" #{t('equery.title')} - #{t('student.students.title')}", "/equery_reports?query_module=4", class: 'btn btn-primary'
      %span{style: 'padding-left: 20px;'}= link_to content_tag(:i, "", :class => "fa fa-arrow-left ") + " " + t('.back', :default => t("helpers.links.back")), new_equery_report_studentattendancesearch_path(searchstudentattendancetype: 1),  :class => 'btn btn-default'
      
