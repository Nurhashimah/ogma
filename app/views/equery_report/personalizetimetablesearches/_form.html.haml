.row
  .col-md-10.col-md-offset-2
    - if @searchpersonalizetimetabletype=='1' || @searchpersonalizetimetabletype==1      
      /:lecturer, :programme_id, :startdate, :enddate
    
      / Nav tabs
      %ul.nav.nav-tabs
        %li.active= link_to (t 'equery.search_by'),"#search", "data-toggle" => "tab"

      .tab-content{style:"padding-top:1em"}
        #search.tab-pane.active
          %br
          .col-md-offset-2
            .form-group
              .col-sm-2.control-label
                = f.label (t 'equery.personalize_timetable.lecturer') 
              .col-md-5
                /- @valid_intakes = Weeklytimetable.validintake_timetable
                /- valid_timetables = Weeklytimetable.find(:all, :conditions => ['intake_id IN(?)', @valid_intakes])
                - staff_ids_exist_timetable = WeeklytimetableDetail.where('weeklytimetable_id IN(?)', Weeklytimetable.validintake_timetable).pluck(:lecturer_id) 
                = f.collection_select :lecturer, Staff.where(id: staff_ids_exist_timetable).sort_by{|x|x.name}, :id, :staff_with_rank, {:include_blank=> (t 'select')}, {class: 'selectpicker', "data-width" => "auto"}
           
            .form-group
              .col-sm-2.control-label
                = f.label  (t 'equery.personalize_timetable.start_date')
              .col-md-4
                .input-group
                  /startdate& enddate - used for WT 'start_date' range
                  = f.text_field :startdate, class: 'form-control date_picker_reverse'
                  .input-group-addon=t('to')
                  = f.text_field :enddate, class: 'form-control date_picker_reverse'