- model_class = InsuranceCompany
.page-header
  %h1= t 'insurance_companies.new'
  
= render 'shared/flashes'

.row.fluid
  = form_for @insurance_company, url: insurance_companies_path, html: { multipart: true, class: 'form-horizontal' }  do |f| 
    = render 'shared/error_messages', object: f.object
    = render :partial => 'form', :locals => {:f => f}
    = f.hidden_field :college_id, value: current_user.college_id
	
    .col-md-offset-1
      .form-group
        .col-sm-offset-2.col-sm-1
          = link_to content_tag(:i, "", :class => "fa fa-arrow-left ") + " " + t('.back', :default => t("helpers.links.back")), insurance_companies_path(@insurance_company), :class => 'btn btn-default'
        .col-sm-offset-0.col-sm-2
          = f.submit t('create'), class: "btn btn-primary"
