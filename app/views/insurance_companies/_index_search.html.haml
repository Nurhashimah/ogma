= search_form_for @search, url: insurance_companies_path,  class: "form-inline" do |f|
  %tr.search_row{style: "display: none;"}
    %td= f.text_field :short_name_cont, size: 2,  :class => "form-control"
    %td= f.text_field :long_name_cont, size: 2,  :class => "form-control"
    %td
      .input-group
        = select_tag('q[active_eq]',options_for_select([[(t 'actions.all_records'),''],[(t 'yes2'),true],[(t 'no2'),false]]),class: 'selectpicker',"data-width"=>'100px')
        %span.input-group-btn
          %button.btn.btn-sm.btn-default.right{:type => "submit"}
            %i.fa.fa-search.fa-fw