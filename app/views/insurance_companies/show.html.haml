- model_class = InsuranceCompany
.page-header
  %h1= (t 'insurance_companies.details')
= render 'shared/flashes'
  
.tab-content.col-md-offset-3
  %dl.dl-horizontal
    %dt= t 'insurance_companies.short_name'
    %dd= @insurance_company.try(:short_name)
    
    %dt= t 'insurance_companies.long_name'
    %dd= @insurance_company.try(:long_name)
    
    %dt= t 'insurance_companies.active'
    %dd= @insurance_company.try(:active?) ? (t 'yes2') : (t 'no2')
        
.row
  .col-md-6.col-md-offset-4
    .form-actions
      = link_to content_tag(:i, "", class: "fa fa-arrow-left ") + " " + t('.back', :default => t("helpers.links.back")), insurance_companies_path, class: 'btn btn-default'
      = link_to content_tag(:i, "", class: "fa fa-edit") + " " + t('.edit', :default => t("helpers.links.edit")), edit_insurance_company_path(@insurance_company), class: 'btn btn-primary'
      = link_to content_tag(:i, "", class: "fa fa-trash-o icon-white") + " " + t('.destroy', :default => t("helpers.links.destroy")), |
        insurance_company_path(@insurance_company),                                                                                                    |
        :method => 'delete',                                                                                                           |
        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },                   |
        class: 'btn btn-danger'