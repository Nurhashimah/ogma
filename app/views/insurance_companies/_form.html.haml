.row
  .col-md-offset-2
    .form-group
      .col-sm-2.control-label
        = f.label t 'insurance_companies.short_name', for: :short_name
      .col-md-2
        = f.text_field :short_name, class: 'form-control'
        
    .form-group
      .col-sm-2.control-label
        = f.label t 'insurance_companies.long_name', for: :long_name
      .col-md-5
        = f.text_field :long_name, class: 'form-control'
        
    .form-group
      .col-sm-2.control-label
        = f.label t 'insurance_companies.active', for: :active
      .col-md-2
        = f.check_box :active