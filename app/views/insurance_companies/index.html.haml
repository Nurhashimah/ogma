- model_class = InsuranceCompany
.page-header
  %h1= t('insurance_companies.list')#, :default => model_class.model_name.human.pluralize
  
.navbar.navbar-inverse{role: "navigation", style: "padding-right:40px;"}
  %ul.nav.navbar-nav
    - permitted_to? :create, :insurance_companies do
      %li= link_to content_tag(:li, fa_icon("asterisk", text: (t 'actions.new'))), new_insurance_company_path
  %ul.nav.navbar-nav.navbar-right
    %li= link_to content_tag(:li, fa_icon("search", text: (t 'actions.search'))), "#", class: "index_search_bar"
      
.row
  %table.table-striped.table-hover.ogma
    %thead
      %tr
        %th= sort_link(@search, :short_name, (t 'insurance_companies.short_name'))
        %th= sort_link(@search, :long_name, (t 'insurance_companies.long_name'))
        %th{style: "width:33%;"}= (t 'insurance_companies.active')
    %tbody
      = render "index_search"
      - @insurance_companies.each do |insurance_company|
        %tr
          %td= link_to insurance_company.short_name, insurance_company_path(insurance_company)
          %td= insurance_company.long_name
          %td= insurance_company.active? ? fa_icon("check") : fa_icon("times")
     
  .right{style:"padding:0 30px; margin:0;"}= paginate @insurance_companies, :theme => 'twitter-bootstrap-3'