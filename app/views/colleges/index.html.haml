- model_class = College
.page-header
  %h1=t 'college.list'
  
.navbar.navbar-inverse{role: "navigation", style: "padding-right:40px;"}
  %ul.nav.navbar-nav
    /%li= link_to content_tag(:li, fa_icon("asterisk", text: (t 'actions.new'))), new_college_path
  %ul.nav.navbar-nav.navbar-right
    %li.toga= link_to content_tag(:li, fa_icon("search", text: (t 'actions.search'))), "#", class: "toga"
    %li= link_to content_tag(:li, fa_icon("print", text: (t 'actions.print'))), "#", class: 'bogus'
 
.row
  %table.table-striped.table-hover.ogma
    %thead
      %tr
        %th{width: '8%'}= t 'college.code'
        %th{width: '20%'}= t 'college.name'
        %th{width: '30%'}= t 'college.address'
        %th{width: '8%'}= t 'college.phone'
        %th{width: '8%'}= t 'college.fax'
        %th{width: '16%'}= t 'college.email'
        %th{width: '10%'}= t 'college.logo'
    %tbody
      - for college in @colleges
        %tr
          %td
            = link_to college.code, root_url(:subdomain => college.code)
            /= link_to college.code, root_url(:host => with_subdomain(college.code))
            /=link_to college.code, root_url(:host => college.code+'.'+request.domain+request.port_string)
            //=link_to college.code, home_path(:subdomain => college.code)
          %td=link_to college.name, college_path(college)
          %td= college.address
          %td= college.phone
          %td= college.fax
          %td= college.email
          %td= college.logo

