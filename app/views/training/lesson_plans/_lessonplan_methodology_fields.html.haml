%fieldset
  = f.hidden_field :_destroy
  = f.hidden_field :lesson_plan_id 
  .row
    .col-sm-3
      = t 'training.lesson_plan.time'
    .col-sm-2
      = f.text_field :start_meth, :placeholder => "Start", class: 'form-control time_picker'
    .col-sm-2
      = t 'training.lesson_plan.to'
    .col-sm-2
      = f.text_field :end_meth, :placeholder => "End", class: 'form-control time_picker'
  .row
    .col-sm-3
      = t 'training.lesson_plan.content'
    .col-md-8
      = f.text_area :content, :placeholder => "Content", class: 'form-control'
  .row
    .col-sm-3
      = t 'training.lesson_plan.lecturer_activity'
    .col-sm-8
      = f.text_area :lecturer_activity, :placeholder =>"Lecturer Activity", class: 'form-control'
  .row
    .col-sm-3
      = t 'training.lesson_plan.student_activity'
    .col-sm-8 
      = f.text_area :student_activity, :placeholder => "Student Activity", class: 'form-control'
  .row
    .col-sm-3
      = t 'training.lesson_plan.training_aids'
    .col-sm-8 
      = f.text_area :training_aids, :placeholder =>"Training Aids", class: 'form-control'
  .row
    .col-sm-3
      = t 'training.lesson_plan.evaluation'
    .col-sm-8 
      = f.text_area :evaluation, :placeholder =>"Evaluation", class: 'form-control'
  .row
    .col-sm-3
    .col-sm-8
    .col-sm-1
      = link_to content_tag(:i, "", class: "fa fa-trash-o"), data: {"data-toggle" => "tooltip", title: "Delete"}, class: "btn btn-danger remove_fields"
  :javascript
    $('.selectpicker').selectpicker('render');
    $('.time_picker').datetimepicker({
     datepicker:false,
     	format:'H:i',
     	step:5,
    });
