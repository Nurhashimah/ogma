$(document).ready(function(){
  $('#lessonplan_schedule').change(function() {
    if($(this).val() == 1) {
      $('.bong').show();
      $('.inventory_selector').hide();
    }else if($(this).val() == 2) {
      $('.bong').hide();
      $('.inventory_selector').show();
    }
  });
