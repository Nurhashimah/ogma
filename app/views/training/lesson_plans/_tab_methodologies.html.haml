- model_class = LessonPlan
.col-md-9.col-md-offset-1
  %dl.dl-horizontal
    - @lesson_plan.lessonplan_methodologies.sort_by{|x|x.start_meth}.each do |l| 
      %hr
      %dt= t 'training.lesson_plan.time'
      %dd
        = h l.start_end_time
        = h l.start_end_time_in_minutes
              
      %dt=t 'training.lesson_plan.content_subtopic'
      %dd{style: 'padding-left: 70px;'}= simple_format(l.content)
              
      %dt=t 'training.lesson_plan.lecturer_activity'
      %dd{style: 'padding-left: 70px;'}= simple_format(l.lecturer_activity) 
              
      %dt=t 'training.lesson_plan.student_activity'
      %dd{style: 'padding-left: 70px;'}= simple_format(l.student_activity) 
              
      %dt=t 'training.lesson_plan.training_aids'
      %dd{style: 'padding-left: 70px;'}= simple_format(l.training_aids) 
              
      %dt=t 'training.lesson_plan.evaluation'
      %dd{style: 'padding-left: 70px;'}= simple_format(l.evaluation)
