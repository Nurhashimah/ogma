- model_class = Topicdetail
.page-header
  %h1= t 'training.topicdetail.edit'

= render 'shared/flashes'

.row
  = form_for [:training, @topicdetail], html: { multipart: true, class: 'form-horizontal' }  do |f| 
    /= form_for [:training, @topicdetail],  :html => { :class => 'form-horizontal' } do |f| 
    = render 'shared/error_messages', object: f.object
    = render :partial => 'form', :locals => {:f => f}
    .row
      .form-group
        .col-md-1.col-md-offset-2
          = link_to content_tag(:i, "", :class => "fa fa-arrow-left ") + " " + t('.back', :default => t("helpers.links.back")), training_topicdetail_path(@topicdetail), :class => 'btn btn-default'
        .col-md-2
          .div{style: "margin-left:-40px;"}
            = f.submit t('update'), class: "btn btn-primary"