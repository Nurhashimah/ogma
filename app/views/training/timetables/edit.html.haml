- model_class = Timetable
.page-header
  %h1
    = t 'training.timetable.edit'
    = @timetable.name

= render 'shared/flashes'

.row
  = form_for [:training, @timetable],  :html => { :class => 'form-horizontal' } do |f| 
    = render 'shared/error_messages', object: f.object
    = render :partial => 'form', :locals => {:f => f}
    .row
      .form-group
        .col-md-1.col-md-offset-3
          = link_to content_tag(:i, "", :class => "fa fa-arrow-left ") + " " + t('.back', :default => t("helpers.links.back")), training_timetable_path(@timetable), :class => 'btn btn-default'
        .col-md-2
          /.div{style: "margin-left:-40px;"}
          = f.submit t('update'), class: "btn btn-primary"