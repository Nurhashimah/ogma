- model_class = Timetable
.page-header
  %h1= t('training.timetable.title')
  
.navbar.navbar-inverse{role: "navigation", style: "padding-right:40px;"}
  %ul.nav.navbar-nav
    %li= link_to content_tag(:li, fa_icon("asterisk", text: (t 'actions.new'))), new_training_timetable_path
  %ul.nav.navbar-nav.navbar-right
    %li.toga= link_to content_tag(:li, fa_icon("search", text: (t 'actions.search'))), "#", class: "toga"
    %li= link_to  (fa_icon "file-pdf-o", text: (t 'print')),  timetable_report_training_timetables_path(params.merge(format: 'pdf' ))

.row
  .col-md-12
    .alert.alert-warning
      %strong=t 'training.timetable.remark'
      %ul
        %li=fa_icon('check-square-o')+" "+(t 'training.timetable.editable_removal_restricted')
        %li=fa_icon('check-square')+" "+(t 'training.timetable.editing_restricted')
  %table.table-striped.table-hover.ogma
    %thead
      %tr
        %th{style: 'width: 5%;'} Status
        %th{width: '10%'}= sort_link(@search, :code, (t 'training.timetable.code'))
        %th{width: '20%'}= sort_link(@search, :name, (t 'training.timetable.name'))
        %th{width: '30%'}= sort_link(@search, :description, (t 'training.timetable.description'))
        %th{width: '20%'}= sort_link(@search, :created_by, (t 'training.timetable.created_by'))

    %tbody
    = render "index_search"
    - @timetables.each do |timetable| 
      %tr
        %td
          - if timetable.timetable_activated==true 
            = fa_icon('check-square') 
          - else
            = fa_icon('check-square-o') if timetable.valid_for_removal==false
        %td=h link_to timetable.code, training_timetable_path(timetable)     
        %td=h timetable.name
        %td=h timetable.description
        %td=h timetable.try(:creator).try(:name)

  .right{style:"padding:0 30px; margin:0;"}= paginate @timetables, :theme => 'twitter-bootstrap-3'