=render "sstab_timeslot_edit", {:rowno=>rowno, :colno=>colno}

/topic (sem-subject-topic)
= t'training.weeklytimetable_detail.topic'
%font{:color=>"blue"}*
=select_tag "weeklytimetable[weeklytimetable_details_attributes][#{@ind}][topic]", options_from_collection_for_select(@semester_subject_topic_list, :id,:semester_subject_topic), :prompt=>(t 'helpers.prompt.select_sem_subject_topic')

/lecturer_id
= t 'training.weeklytimetable_detail.lecturer_id'
%font{:color=>"blue"}*
/=select_tag "weeklytimetable[weeklytimetable_details_attributes][#{@ind}][lecturer_id]", options_from_collection_for_select(Staff.joins(:positions).where('positions.name=?','Pengajar').sort_by(&:name), :id,:name), :prompt=>(t 'helpers.prompt.select_lecturer')
=select_tag "weeklytimetable[weeklytimetable_details_attributes][#{@ind}][lecturer_id]", options_from_collection_for_select(@lecturer_list, :id,:name), :prompt=>(t 'helpers.prompt.select_lecturer')
	
/location
= t 'training.weeklytimetable_detail.location'
/=select_tag "weeklytimetable[weeklytimetable_details_attributes][#{@ind}][location]", options_from_collection_for_select(Weeklytimetable.location_list.sort_by{|x|x.name}, :id, :name), :prompt=>(t 'helpers.prompt.select_location')
=text_field_tag "weeklytimetable[weeklytimetable_details_attributes][#{@ind}][location_desc]"
	
/lecture method
= t 'training.weeklytimetable_detail.lecture_method'
%font{:color=>"blue"}*
= select_tag "weeklytimetable[weeklytimetable_details_attributes][#{@ind}][lecture_method]", options_for_select(DropDown::CLASS_METHOD), :prompt=> (t 'helpers.prompt.select_lecture_method')
