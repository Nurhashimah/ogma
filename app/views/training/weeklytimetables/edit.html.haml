- model_class = Weeklytimetable
.page-header
  %h1= t 'training.weeklytimetable.edit'

= render 'shared/flashes'

.row
  = form_for [:training, @weeklytimetable],  :html => { :class => 'form-horizontal' } do |f| 
    = render 'shared/error_messages', object: f.object
    = render :partial => 'form', :locals => {:f => f}		  	
    .row
      .form-group
        .col-md-1.col-md-offset-2
          = link_to content_tag(:i, "", :class => "fa fa-arrow-left ") + " " + t('.back', :default => t("helpers.links.back")), training_weeklytimetable_path(@weeklytimetable), :class => 'btn btn-default'
        .col-md-2.col-md-offset-1
          .div{style: "margin-left:-40px;"}
            = f.submit t('update'), class: "btn btn-primary"
