- model_class = AcademicSession
.page-header
  %h1= t 'training.academic_session.title'
= render 'shared/flashes'

.row
  .col-md-offset-1
    / Nav tabs
    %ul.nav.nav-tabs
      %li.active= link_to (t 'training.academic_session.details'),"#academic_session_details", "data-toggle" => "tab"

    / display 
    .tab-content{style:"padding-top:1em"}
      #academic_session_details.tab-pane.active  
        .col-md-8.col-md-offset-1
          %dl.dl-horizontal
            %dt= t'training.academic_session.semester'
            %dd=h @academic_session.semester

            %dt= t'training.academic_session.total_week'
            %dd=h @academic_session.total_week 

.row
  .col-md-4.col-md-offset-3
    %hr
    .form-actions
      = link_to content_tag(:i, "", :class => "fa fa-arrow-left ") + " " + t('.back', :default => t("helpers.links.back")), training_academic_sessions_path, :class => 'btn btn-default'
      = link_to content_tag(:i, "", :class => "fa fa-edit") + " " + t('.edit', :default => t("helpers.links.edit")), edit_training_academic_session_path(@academic_session),  :class => 'btn btn-primary' 
      = link_to content_tag(:i, "", :class => "fa fa-trash-o icon-white") + " " + t('.destroy', :default => t("helpers.links.destroy")), |
        training_academic_session_path(@academic_session),                                                                                                    |
        :method => 'delete',                                                                                                           |
        :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },                   |
        :class => 'btn btn-danger'
