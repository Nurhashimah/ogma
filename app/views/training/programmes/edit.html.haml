- model_class = Programme
.page-header
  %h1
    = t 'edit'
    = h (DropDown::COURSE_TYPES.find_all{|disp, value| value == @programme.course_type}).map {|disp, value| disp}[0]
    = @programme.name

= render 'shared/flashes'

.row
  = form_for [:training, @programme],  html: { multipart: true, class: 'form-horizontal' }  do |f| 
    = render 'shared/error_messages', object: f.object
    .col-md-offset-1
      = render :partial => 'form', :locals => {:f => f}
      .form-group
        .col-sm-offset-4.col-sm-1
          = link_to content_tag(:i, "", :class => "fa fa-arrow-left ") + " " + t('.back', :default => t("helpers.links.back")), training_programme_path(@programme), :class => 'btn btn-default'
        .col-sm-2
          = f.submit t('update'), class: "btn btn-primary" 
