- model_class = Intake
.page-header
  %h1= t('training.intake.title')
  
.navbar.navbar-inverse{role: "navigation", style: "padding-right:40px;"}
  %ul.nav.navbar-nav
    %li= link_to content_tag(:li, fa_icon("asterisk", text: (t 'actions.new'))), new_training_intake_path
  %ul.nav.navbar-nav.navbar-right
    %li.toga= link_to content_tag(:li, fa_icon("search", text: (t 'actions.search'))), "#", class: "index_search_bar"
    %li= link_to  (fa_icon "file-pdf-o", text: (t 'print')),  intake_report_training_intakes_path(params.merge(format: 'pdf' ))

.row.filter{style: "display:none;"}
  .col-md-2
    
.row
  %table.table-striped.table-hover.ogma
    %thead
      %tr
        - if current_user.college.code=='amsas'
          %th{width: '7%'}=sort_link(@search, :name, "Siri")
        %th{width: '20%'}= sort_link(@search, :description, (t 'training.intake.division_name'))
        %th{width: '15%'}= sort_link(@search, :register_on, (t 'training.intake.register_on'))
        %th{width: '18%'}= sort_link(@search, :programme_id, (t 'training.intake.programme_id'))
        - if current_user.college.code=='amsas'
          %th{width: '15%'}= sort_link(@search, :staff_id, (t 'training.intake.coordinator'))
        - else
          %th{width: '15%'}= sort_link(@search, :staff_id, (t 'training.intake.staff_id'))
        %th{style: "width:10%;"}= sort_link(@search, :is_active, (t 'training.intake.is_active'))

    %tbody
    = render "index_search"
    - if current_user.college.code=='amsas'
      - for details in @intakes3
        %tr
          %td=h link_to details.name, training_intake_path(details)
          %td
            - if details.description.to_i > 0
              - 0.upto(details.description.to_i-1) do |x|
                ="(#{x+1}) #{details.division[x.to_s]["name"]} - #{details.division[x.to_s]["total_student"]} #{(t 'training.intake.person')}"
                %br
            - else
              =t('not_applicable')
          %td=h details.try(:register_on).try(:strftime, "%d %b %Y") 
          %td=h details.programme.programme_list
          %td=h details.coordinator.try(:name)
          %td=h details.is_active? ? fa_icon('check') : fa_icon('times')

    - else
      - @intakes.each do |intakedate,intakedetails|
        %tr
          %td.group{:colspan => "8", :style => "background-color:#EFF1F1;"}
            %span{:style => "color:#218AFB;font-weight:bold;"}=h intakedate.strftime('%b %Y')
        - for details in intakedetails 
          %tr
            %td=h link_to details.description, training_intake_path(details)
            %td=h details.try(:register_on).try(:strftime, "%d %b %Y") 
            %td=h details.programme.programme_list
            %td=h details.coordinator.try(:name)
            %td=h details.is_active? ? fa_icon('check') : fa_icon('times')

  .right{style:"padding:0 30px; margin:0;"}= paginate @intakes3, :theme => 'twitter-bootstrap-3'	