- model_class = Examanalysis
.page-header
  %h1=t('exam.examanalysis.new') 
  
= render 'shared/flashes'

.row.fluid
  = form_for [:exam, @examanalysis], html: { class: 'form-horizontal' }  do |f| 
    = render 'shared/error_messages', object: f.object
    = hidden_field_tag :redirect_location, exam_examanalyses_path 
    
    .col-md-8.col-md-offset-3
      .form-group
        .col-sm-2.control-label
          = f.label t 'exam.examanalysis.final_exam', for: :exam_id
        .col-md-6
          = f.collection_select :exam_id, @exams, :id, :exam_name_subject_date, {:include_blank => t('select')}, {class: 'selectpicker mandatory', "data-width"=>"450px"}

    .row
      .col-md-10.col-md-offset-1
        .form-group
          .col-sm-offset-4.col-sm-1
            = link_to content_tag(:i, "", :class => "fa fa-arrow-left ") + " " + t('.back', :default => t("helpers.links.back")), exam_examanalyses_path, :class => 'btn btn-default'
          .col-sm-2
            = f.submit t('create'),  :name=> :submit_button, class: "btn btn-primary"