= search_form_for [:examquestion, @search], url: exam_examquestions_path,  class: "form-inline" do |f|
  %tr.search_row{style: "display: none;"}
    %td &nbsp;
    %td= f.text_field :keyword_search, size: 2, class: 'form-control', placeholder: (t 'exam.examquestion.subject_id')
    %td= f.text_field :topic_name_cont, size: 2, class: 'form-control', placeholder: (t 'exam.examquestion.topic_id')
    %td= f.text_field :questiontype_cont, size: 2, class: 'form-control', placeholder: (t 'exam.examquestion.questiontype') 
    %td
      = f.text_field :question_cont, size: 2, class: 'form-control', placeholder: (t 'exam.examquestion.question') 
      = f.text_field :answer_cont, size: 2, class: 'form-control', placeholder: (t 'exam.examquestion.answer')
    %td= f.text_field :marks_eq, size: 2, :class=> 'form-control', placeholder: (t 'exam.examquestion.marks')
    %td= f.text_field :category_cont, size: 2, class: 'form-control', placeholder: (t 'exam.examquestion.category')
    %td= f.text_field :difficulty_cont, size: 2, class: 'form-control', placeholder: (t 'exam.examquestion.difficulty')
    %td= f.text_field :qstatus_cont, size: 2,  class: 'form-control', placeholder: (t 'exam.examquestion.qstatus')
    %td
      .input-group
        = f.text_field :creator_name_cont, size: 2,  class: 'form-control', placeholder: (t 'exam.examquestion.creator_id')
        %span.input-group-btn
          %button.btn.btn-sm.btn-default.right{:type => "submit"}
            %i.fa.fa-search.fa-fw

